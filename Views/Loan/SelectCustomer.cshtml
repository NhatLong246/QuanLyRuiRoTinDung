@model QuanLyRuiRoTinDung.Controllers.SelectCustomerViewModel
@{
    ViewData["Title"] = "Chọn khách hàng";
    Layout = "_DashboardLayout";
}

<div class="customer-selection-container">
    <div class="page-header">
        <h1 class="page-title">Chọn khách hàng để tạo hồ sơ vay</h1>
        <p class="page-subtitle">Vui lòng chọn khách hàng cần tạo hồ sơ vay</p>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Tab Navigation -->
    <div class="customer-tabs">
        <button class="tab-btn active" data-tab="canhan">Khách hàng cá nhân (@Model.KhachHangCaNhans.Count)</button>
        <button class="tab-btn" data-tab="doanhnghiep">Khách hàng doanh nghiệp (@Model.KhachHangDoanhNghieps.Count)</button>
    </div>

    <!-- Khách hàng cá nhân -->
    <div class="tab-content active" id="tab-canhan">
        @if (Model.KhachHangCaNhans.Any())
        {
            <div class="customer-grid">
                @foreach (var kh in Model.KhachHangCaNhans)
                {
                    <div class="customer-card">
                        <div class="customer-info">
                            <div class="customer-header">
                                @if (!string.IsNullOrEmpty(kh.AnhDaiDien))
                                {
                                    <img src="@kh.AnhDaiDien" alt="Ảnh đại diện" class="customer-avatar" />
                                }
                                else
                                {
                                    <div class="customer-avatar-placeholder">
                                        <span>@(kh.HoTen?.Substring(0, Math.Min(1, kh.HoTen.Length)) ?? "?")</span>
                                    </div>
                                }
                                <div class="customer-text-info">
                                    <h3 class="customer-name">@kh.HoTen</h3>
                                    <div class="customer-details">
                                        <span class="customer-code">Mã: @kh.MaKhachHangCode</span>
                                        @if (!string.IsNullOrEmpty(kh.SoCmnd))
                                        {
                                            <span class="customer-id">CMND: @kh.SoCmnd</span>
                                        }
                                        @if (!string.IsNullOrEmpty(kh.SoDienThoai))
                                        {
                                            <span class="customer-phone">ĐT: @kh.SoDienThoai</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="customer-actions">
                            <a href="@Url.Action("Create", "Loan", new { customerId = kh.MaKhachHang, customerType = "CaNhan" })" class="btn-select">
                                Chọn
                            </a>
                            <a href="@Url.Action("LoanList", "Loan", new { customerId = kh.MaKhachHang, customerType = "CaNhan" })" class="btn-list">
                                Danh sách
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <p>Chưa có khách hàng cá nhân nào. <a href="@Url.Action("CreateCaNhan", "Customer")">Tạo khách hàng mới</a></p>
            </div>
        }
    </div>

    <!-- Khách hàng doanh nghiệp -->
    <div class="tab-content" id="tab-doanhnghiep">
        @if (Model.KhachHangDoanhNghieps.Any())
        {
            <div class="customer-grid">
                @foreach (var kh in Model.KhachHangDoanhNghieps)
                {
                    <div class="customer-card">
                        <div class="customer-info">
                            <div class="customer-header">
                                @if (!string.IsNullOrEmpty(kh.AnhNguoiDaiDien))
                                {
                                    <img src="@kh.AnhNguoiDaiDien" alt="Ảnh người đại diện" class="customer-avatar" />
                                }
                                else
                                {
                                    <div class="customer-avatar-placeholder">
                                        <span>@(kh.TenCongTy?.Substring(0, Math.Min(1, kh.TenCongTy.Length)) ?? "?")</span>
                                    </div>
                                }
                                <div class="customer-text-info">
                                    <h3 class="customer-name">@kh.TenCongTy</h3>
                                    <div class="customer-details">
                                        <span class="customer-code">Mã: @kh.MaKhachHangCode</span>
                                        <span class="customer-id">MST: @kh.MaSoThue</span>
                                        @if (!string.IsNullOrEmpty(kh.SoDienThoai))
                                        {
                                            <span class="customer-phone">ĐT: @kh.SoDienThoai</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="customer-actions">
                            <a href="@Url.Action("Create", "Loan", new { customerId = kh.MaKhachHang, customerType = "DoanhNghiep" })" class="btn-select">
                                Chọn
                            </a>
                            <a href="@Url.Action("LoanList", "Loan", new { customerId = kh.MaKhachHang, customerType = "DoanhNghiep" })" class="btn-list">
                                Danh sách
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <p>Chưa có khách hàng doanh nghiệp nào. <a href="@Url.Action("CreateDoanhNghiep", "Customer")">Tạo khách hàng mới</a></p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const tabId = this.dataset.tab;
                
                // Remove active class from all tabs and contents
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                // Add active class to clicked tab and corresponding content
                this.classList.add('active');
                document.getElementById('tab-' + tabId).classList.add('active');
            });
        });
    </script>
}

<style>
.customer-selection-container {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
}

.page-header {
    margin-bottom: 2rem;
}

.page-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 0.5rem;
}

.page-subtitle {
    color: #666;
    font-size: 0.95rem;
}

.customer-tabs {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    border-bottom: 2px solid #e5e7eb;
}

.tab-btn {
    padding: 0.75rem 1.5rem;
    background: none;
    border: none;
    border-bottom: 3px solid transparent;
    font-weight: 500;
    color: #666;
    cursor: pointer;
    transition: all 0.2s;
    margin-bottom: -2px;
}

.tab-btn:hover {
    color: #3b82f6;
}

.tab-btn.active {
    color: #3b82f6;
    border-bottom-color: #3b82f6;
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}

.customer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(420px, 1fr));
    gap: 1.75rem;
}

.customer-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 1.75rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    transition: all 0.2s;
    gap: 1.5rem;
}

.customer-card:hover {
    border-color: #3b82f6;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.15);
    transform: translateY(-2px);
}

.customer-info {
    flex: 1;
    min-width: 0; /* Cho phép text truncate */
}

.customer-header {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    flex: 1;
    min-width: 0;
}

.customer-avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #e5e7eb;
    flex-shrink: 0;
}

.customer-avatar-placeholder {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    font-weight: 600;
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.2);
}

.customer-text-info {
    flex: 1;
    min-width: 0;
    padding-right: 0.5rem;
}

.customer-name {
    font-size: 1.15rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 0.75rem;
    line-height: 1.5;
    word-wrap: break-word;
    word-break: break-word;
}

.customer-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #666;
    line-height: 1.5;
}

.customer-details span {
    display: block;
}

.customer-actions {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
    align-self: center;
    margin-top: 0.5rem;
}

.btn-select {
    padding: 0.75rem 1.75rem;
    background: #3b82f6;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
    white-space: nowrap;
    box-shadow: 0 2px 4px rgba(59, 130, 246, 0.2);
}

.btn-select:hover {
    background: #2563eb;
    box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3);
    transform: translateY(-1px);
}

.btn-list {
    padding: 0.75rem 1.75rem;
    background: #10b981;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
    white-space: nowrap;
    box-shadow: 0 2px 4px rgba(16, 185, 129, 0.2);
}

.btn-list:hover {
    background: #059669;
    box-shadow: 0 4px 8px rgba(16, 185, 129, 0.3);
    transform: translateY(-1px);
}

.empty-state {
    text-align: center;
    padding: 3rem;
    color: #666;
}

.empty-state a {
    color: #3b82f6;
    text-decoration: none;
}

.empty-state a:hover {
    text-decoration: underline;
}

.alert {
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1.5rem;
}

.alert-danger {
    background: #fee2e2;
    color: #991b1b;
    border: 1px solid #fca5a5;
}
</style>
