@model List<QuanLyRuiRoTinDung.Models.Entities.BaoCaoRuiRo>

@{
    ViewData["Title"] = "Báo cáo Rủi ro - Quản lý Lãnh đạo";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2">
                <i class="fas fa-file-alt me-2"></i>
                Báo cáo Tổng hợp Rủi ro Tín dụng
            </h1>
            <p class="text-muted">Xem các báo cáo rủi ro chi tiết</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Tìm kiếm..." name="search">
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="status">
                        <option value="">-- Trạng thái --</option>
                        @if (ViewBag.StatusList != null)
                        {
                            @foreach (var statusItem in (List<string>)ViewBag.StatusList)
                            {
                                <option value="@statusItem" selected="@(ViewBag.SelectedStatus?.ToString() == statusItem)">
                                    @statusItem
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-2"></i>Tìm kiếm
                        </button>
                        <a href="@Url.Action("BaoCaoRuiRo")" class="btn btn-secondary">Làm mới</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã báo cáo</th>
                        <th>Loại báo cáo</th>
                        <th>Kỳ báo cáo</th>
                        <th>Người lập</th>
                        <th>Ngày lập</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@report.MaBaoCao</span>
                                </td>
                                <td>
                                    <strong>@report.LoaiBaoCao</strong>
                                </td>
                                <td>
                                    @report.KyBaoCao
                                </td>
                                <td>@report.NguoiLapNavigation?.HoTen</td>
                                <td>@report.NgayLap?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @{
                                        var badgeClass = report.TrangThai switch
                                        {
                                            "Phê duyệt" => "bg-success",
                                            "Nháp" => "bg-secondary",
                                            _ => "bg-info"
                                        };
                                    }
                                    <span class="badge @badgeClass">@report.TrangThai</span>
                                </td>
                                <td>
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-primary action-view-report-btn" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#reportDetailModal"
                                            data-report-id="@report.MaBaoCao"
                                            title="Xem chi tiết">
                                        <i class="fas fa-eye me-1"></i>Xem
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <br>
                                Không có báo cáo nào
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Chi tiết Báo cáo -->
<div class="modal fade" id="reportDetailModal" tabindex="-1" aria-labelledby="reportDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="reportDetailModalLabel">
                    <i class="fas fa-file-alt me-2"></i>Chi tiết Báo cáo
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="reportDetailContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                    <p class="mt-3 text-muted">Đang tải thông tin...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Preview File PDF -->
<div class="modal fade" id="filePreviewModal" tabindex="-1" aria-labelledby="filePreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen-lg-down modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="filePreviewModalLabel">
                    <i class="fas fa-file-pdf me-2"></i>Xem trước file báo cáo
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <iframe id="filePreviewFrame" 
                        src="" 
                        style="width: 100%; height: 80vh; border: none;"
                        frameborder="0">
                </iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <a id="downloadFileLink" href="#" class="btn btn-success" download>
                    <i class="fas fa-download me-2"></i>Tải xuống
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const reportDetailModal = document.getElementById('reportDetailModal');
        const reportDetailContent = document.getElementById('reportDetailContent');
        
        if (reportDetailModal && reportDetailContent) {
            reportDetailModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                if (button) {
                    const reportId = button.getAttribute('data-report-id');
                    
                    if (reportId) {
                        // Show loading
                        reportDetailContent.innerHTML = `
                            <div class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Đang tải...</span>
                                </div>
                                <p class="mt-3 text-muted">Đang tải thông tin...</p>
                            </div>
                        `;
                        
                        // Load chi tiết báo cáo (partial view)
                        fetch('@Url.Action("ChiTietBaoCao", "LanhDao")?id=' + reportId + '&partial=true')
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error('Không thể tải thông tin. Status: ' + response.status);
                                }
                                return response.text();
                            })
                            .then(html => {
                                // Since we're using partial view, HTML should be clean content only
                                // Remove any scripts that might be in the response
                                const tempDiv = document.createElement('div');
                                tempDiv.innerHTML = html;
                                const scripts = tempDiv.querySelectorAll('script');
                                scripts.forEach(s => s.remove());
                                
                                reportDetailContent.innerHTML = tempDiv.innerHTML;
                            })
                            .catch(error => {
                                console.error('Error loading report details:', error);
                                reportDetailContent.innerHTML = `
                                    <div class="alert alert-danger">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        Lỗi khi tải thông tin: ${error.message}
                                    </div>
                                `;
                            });
                    }
                }
            });
            
            reportDetailModal.addEventListener('hidden.bs.modal', function() {
                reportDetailContent.innerHTML = `
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Đang tải...</span>
                        </div>
                        <p class="mt-3 text-muted">Đang tải thông tin...</p>
                    </div>
                `;
            });
        }

        // File Preview Modal Handler
        const filePreviewModal = document.getElementById('filePreviewModal');
        if (filePreviewModal) {
            filePreviewModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                if (button) {
                    const fileUrl = button.getAttribute('data-file-url');
                    const previewFrame = document.getElementById('filePreviewFrame');
                    const downloadLink = document.getElementById('downloadFileLink');
                    
                    if (previewFrame && fileUrl) {
                        previewFrame.src = fileUrl;
                    }
                    
                    if (downloadLink && fileUrl) {
                        downloadLink.href = fileUrl;
                    }
                }
            });

            filePreviewModal.addEventListener('hidden.bs.modal', function() {
                const previewFrame = document.getElementById('filePreviewFrame');
                if (previewFrame) {
                    previewFrame.src = '';
                }
            });
        }
    });
</script>

<style>
    /* Enhanced report view styles */
    .card {
        border-radius: 12px;
    }

    .table th {
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    }

    .btn-group-sm {
        gap: 0.5rem;
    }

    .action-view-report-btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .action-view-report-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .modal-header.bg-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%) !important;
    }

    .h2 {
        color: #1e293b;
        font-weight: 700;
    }
</style>
