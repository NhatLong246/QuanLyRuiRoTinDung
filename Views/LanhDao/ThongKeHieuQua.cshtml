@using System.Linq
@model dynamic

@{
    ViewData["Title"] = "Thống kê Hiệu quả Hoạt động - Quản lý Lãnh đạo";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2">
                <i class="fas fa-chart-line me-2"></i>
                Thống kê Hiệu quả Hoạt động Tín dụng
            </h1>
            <p class="text-muted">Phân tích và đánh giá hiệu quả hoạt động tín dụng</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Key Metrics Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-left-primary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-primary font-weight-bold text-uppercase mb-1 small">Tháng Này - Nộp Hồ Sơ</div>
                            <div class="h3 mb-0">@Model.LoansThisMonth</div>
                            @{
                                var changeLoans = Model.LoansThisMonth - Model.LoansLastMonth;
                                var changePercent = Model.LoansLastMonth > 0 
                                    ? Math.Round((decimal)changeLoans / Model.LoansLastMonth * 100, 1) 
                                    : 0;
                            }
                            <small class="text-muted">
                                @if (changeLoans > 0)
                                {
                                    <span class="text-success">↑ +@changeLoans</span>
                                }
                                else if (changeLoans < 0)
                                {
                                    <span class="text-danger">↓ @changeLoans</span>
                                }
                                else
                                {
                                    <span class="text-muted">→ Không đổi</span>
                                }
                                so với tháng trước (@Model.LoansLastMonth)
                            </small>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-file-alt fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-success h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-success font-weight-bold text-uppercase mb-1 small">Phê Duyệt Tháng Này</div>
                            <div class="h3 mb-0">@Model.ApprovedThisMonth</div>
                            <small class="text-muted">
                                Từ chối: <span class="text-danger">@Model.RejectedThisMonth</span>
                            </small>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-check-circle fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-danger h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-danger font-weight-bold text-uppercase mb-1 small">Tỷ Lệ Nợ Xấu</div>
                            <div class="h3 mb-0">@Model.BadDebtRatio%</div>
                            <small class="text-muted">Tổng số khoản vay</small>
                        </div>
                        <div class="text-danger">
                            <i class="fas fa-exclamation-triangle fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-info h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-info font-weight-bold text-uppercase mb-1 small">Vốn Vay Trung Bình</div>
                            <div class="h5 mb-0">@Model.AverageLoanAmount.ToString("N0")</div>
                            <small class="text-muted">VNĐ / khoản vay</small>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-money-bill-wave fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Xu hướng phê duyệt (6 tháng gần đây)
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="approvalTrendChart" height="300"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>So sánh nộp hồ sơ vs phê duyệt
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="comparisonChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Loan Amount Chart Row -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Tổng vốn vay 6 tháng gần đây
                    </h6>
                </div>
                <div class="card-body" style="height: 300px;">
                    <canvas id="totalLoanAmountChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Summary Table -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h6 class="card-title mb-0">
                <i class="fas fa-table me-2"></i>Tóm tắt theo tháng (6 tháng gần đây)
            </h6>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tháng</th>
                        <th class="text-center">Khoản Nộp Hồ Sơ</th>
                        <th class="text-center">Khoản Phê Duyệt</th>
                        <th class="text-center">Khoản Từ Chối</th>
                        <th>Tỷ Lệ Phê Duyệt</th>
                        <th class="text-center">Tổng Vốn Vay</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var monthlySummary = Model.MonthlySummary as System.Collections.ICollection;
                        var hasMonthlyData = monthlySummary != null && monthlySummary.Count > 0;
                    }
                    @if (hasMonthlyData)
                    {
                        @foreach (var summary in Model.MonthlySummary)
                        {
                            var approvalRate = summary.Submitted > 0 
                                ? Math.Round((decimal)summary.Approved / summary.Submitted * 100, 1) 
                                : 0;
                            
                            <tr>
                                <td><strong>@summary.Month</strong></td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@summary.Submitted</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success">@summary.Approved</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-danger">@summary.Rejected</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                            <div class="progress-bar bg-success" role="progressbar" 
                                                 style="width: @approvalRate%">
                                                @approvalRate%
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (summary.TotalLoanAmount > 0)
                                    {
                                        <strong class="text-success">@summary.TotalLoanAmount.ToString("N0")</strong>
                                        <br><small class="text-muted">VNĐ</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle me-2"></i>Chưa có dữ liệu thống kê
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Approval Trend Chart
            fetch('@Url.Action("GetChartData", new { type = "approvalRate" })')
                .then(response => response.json())
                .then(data => {
                    if (data && data.labels && data.data) {
                        const ctx = document.getElementById('approvalTrendChart').getContext('2d');
                        new Chart(ctx, {
                            type: 'line',
                            data: {
                                labels: data.labels,
                                datasets: [{
                                    label: 'Tỷ lệ phê duyệt (%)',
                                    data: data.data,
                                    borderColor: '#0d6efd',
                                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                                    fill: true,
                                    tension: 0.4,
                                    pointRadius: 5,
                                    pointBackgroundColor: '#0d6efd',
                                    pointBorderColor: '#fff',
                                    pointBorderWidth: 2
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                plugins: {
                                    legend: {
                                        display: true,
                                        position: 'bottom'
                                    },
                                    tooltip: {
                                        mode: 'index',
                                        intersect: false
                                    }
                                },
                                scales: {
                                    y: {
                                        beginAtZero: true,
                                        max: 100,
                                        ticks: {
                                            callback: function(value) {
                                                return value + '%';
                                            }
                                        }
                                    }
                                }
                            }
                        });
                    }
                })
                .catch(error => {
                    console.error('Error loading approval trend chart:', error);
                });

            // Comparison Chart (Submitted vs Approved)
            @{
                var monthlyData = Model.MonthlySummary as System.Collections.ICollection;
                if (monthlyData != null && monthlyData.Count > 0)
                {
                    var months = new List<string>();
                    var submitted = new List<int>();
                    var approved = new List<int>();
                    
                    foreach (var item in Model.MonthlySummary)
                    {
                        months.Add(item.Month);
                        submitted.Add(item.Submitted);
                        approved.Add(item.Approved);
                    }
                    
                    <text>
                    const comparisonCtx = document.getElementById('comparisonChart').getContext('2d');
                    new Chart(comparisonCtx, {
                        type: 'bar',
                        data: {
                            labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(months)),
                            datasets: [{
                                label: 'Nộp hồ sơ',
                                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(submitted)),
                                backgroundColor: 'rgba(13, 110, 253, 0.7)',
                                borderColor: '#0d6efd',
                                borderWidth: 1
                            }, {
                                label: 'Phê duyệt',
                                data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(approved)),
                                backgroundColor: 'rgba(25, 135, 84, 0.7)',
                                borderColor: '#198754',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'bottom'
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        stepSize: 1
                                    }
                                }
                            }
                        }
                    });
                    </text>
                }
            }

            // Total Loan Amount Chart (6 months)
            @{
                var monthlyDataForLoan = Model.MonthlySummary as System.Collections.ICollection;
                if (monthlyDataForLoan != null && monthlyDataForLoan.Count > 0)
                {
                    var monthsForLoan = new List<string>();
                    var totalLoanAmounts = new List<decimal>();
                    decimal maxAmount = 0;
                    
                    foreach (var item in Model.MonthlySummary)
                    {
                        monthsForLoan.Add(item.Month);
                        totalLoanAmounts.Add(item.TotalLoanAmount);
                        if (item.TotalLoanAmount > maxAmount)
                        {
                            maxAmount = item.TotalLoanAmount;
                        }
                    }
                    
                    // Tính toán max value dựa trên giá trị cao nhất
                    // Ví dụ: 0.5 tỷ -> làm tròn lên thành 1 tỷ hoặc 2 tỷ, chia thành các mốc cao hơn
                    decimal suggestedMax = 0;
                    decimal stepSize = 0;
                    
                    if (maxAmount > 0)
                    {
                        // Làm tròn giá trị cao nhất lên thành số đẹp và tăng thêm để biểu đồ cao hơn
                        if (maxAmount >= 1000000000m) // >= 1 tỷ
                        {
                            // Ví dụ: 0.5 tỷ -> làm tròn lên thành 1 tỷ, chia thành 0, 0.5, 1 tỷ
                            // Ví dụ: 5.6 tỷ -> làm tròn lên thành 6 tỷ, chia thành 0, 2, 4, 6 tỷ
                            decimal ty = maxAmount / 1000000000m;
                            decimal roundedTy = Math.Ceiling(ty); // Làm tròn lên
                            
                            // Tăng thêm để biểu đồ cao hơn (ít nhất gấp đôi giá trị cao nhất)
                            if (roundedTy <= 1)
                            {
                                // Nếu <= 1 tỷ, đặt max = 2 tỷ, chia thành 0, 0.5, 1, 1.5, 2 tỷ
                                suggestedMax = 2000000000m; // 2 tỷ
                                stepSize = 500000000m; // 0.5 tỷ
                            }
                            else if (roundedTy <= 2)
                            {
                                // Nếu <= 2 tỷ, đặt max = 3 tỷ, chia thành 0, 1, 2, 3 tỷ
                                suggestedMax = 3000000000m; // 3 tỷ
                                stepSize = 1000000000m; // 1 tỷ
                            }
                            else if (roundedTy <= 3)
                            {
                                // Nếu <= 3 tỷ, đặt max = 4 tỷ, chia thành 0, 1, 2, 3, 4 tỷ
                                suggestedMax = 4000000000m; // 4 tỷ
                                stepSize = 1000000000m; // 1 tỷ
                            }
                            else if (roundedTy <= 6)
                            {
                                // Nếu <= 6 tỷ, đặt max = 8 tỷ, chia thành 0, 2, 4, 6, 8 tỷ
                                suggestedMax = 8000000000m; // 8 tỷ
                                stepSize = 2000000000m; // 2 tỷ
                            }
                            else if (roundedTy <= 10)
                            {
                                // Nếu <= 10 tỷ, đặt max = 12 tỷ, chia thành 0, 2, 4, 6, 8, 10, 12 tỷ
                                suggestedMax = 12000000000m; // 12 tỷ
                                stepSize = 2000000000m; // 2 tỷ
                            }
                            else
                            {
                                // Nếu > 10 tỷ, đặt max = roundedTy * 1.5, chia thành các mốc 5 tỷ
                                suggestedMax = Math.Ceiling(roundedTy * 1.5m) * 1000000000m;
                                stepSize = 5000000000m; // 5 tỷ
                            }
                        }
                        else if (maxAmount >= 1000000m) // >= 1 triệu
                        {
                            // Làm tròn lên đến triệu gần nhất và tăng thêm
                            decimal trieu = maxAmount / 1000000m;
                            decimal roundedTrieu = Math.Ceiling(trieu);
                            
                            if (roundedTrieu <= 1)
                            {
                                suggestedMax = 2000000m; // 2 triệu
                                stepSize = 500000m; // 0.5 triệu
                            }
                            else if (roundedTrieu <= 3)
                            {
                                suggestedMax = 4000000m; // 4 triệu
                                stepSize = 1000000m; // 1 triệu
                            }
                            else if (roundedTrieu <= 6)
                            {
                                suggestedMax = 8000000m; // 8 triệu
                                stepSize = 2000000m; // 2 triệu
                            }
                            else
                            {
                                suggestedMax = Math.Ceiling(roundedTrieu * 1.5m) * 1000000m;
                                stepSize = 5000000m; // 5 triệu
                            }
                        }
                        else if (maxAmount >= 1000m)
                        {
                            decimal nghin = maxAmount / 1000m;
                            decimal roundedNghin = Math.Ceiling(nghin);
                            
                            if (roundedNghin <= 6)
                            {
                                suggestedMax = Math.Ceiling(roundedNghin * 1.5m) * 1000m;
                                stepSize = 2000m; // 2 nghìn
                            }
                            else
                            {
                                suggestedMax = Math.Ceiling(roundedNghin * 1.5m) * 1000m;
                                stepSize = 5000m; // 5 nghìn
                            }
                        }
                        else
                        {
                            suggestedMax = Math.Ceiling(maxAmount * 2m);
                            stepSize = Math.Ceiling(suggestedMax / 4m);
                        }
                    }
                    else
                    {
                        // Nếu không có dữ liệu, đặt giá trị mặc định
                        suggestedMax = 2000000000m; // 2 tỷ
                        stepSize = 500000000m; // 0.5 tỷ
                    }
                    
                    // Điều chỉnh lại suggestedMax để chia hết cho stepSize
                    int numberOfSteps = (int)Math.Ceiling(suggestedMax / stepSize);
                    suggestedMax = stepSize * numberOfSteps;
                    
                    // Tạo danh sách các giá trị ticks (bao gồm 0)
                    var yTicks = new List<decimal>();
                    for (int i = 0; i <= numberOfSteps; i++)
                    {
                        yTicks.Add(i * stepSize);
                    }
                    
                    <text>
                    const totalLoanAmountCtx = document.getElementById('totalLoanAmountChart').getContext('2d');
                    const chartData = {
                        labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(monthsForLoan)),
                        datasets: [{
                            label: 'Tổng vốn vay (VNĐ)',
                            data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(totalLoanAmounts)),
                            backgroundColor: 'rgba(6, 182, 212, 0.7)',
                            borderColor: '#06b6d4',
                            borderWidth: 2,
                            borderRadius: 8,
                            borderSkipped: false
                        }]
                    };
                    
                    const yTicksValues = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(yTicks));
                    
                    // Plugin tùy chỉnh để vẽ nhãn số tiền
                    const drawLabelsPlugin = {
                        id: 'drawLabels',
                        afterDatasetsDraw: function(chart) {
                            const ctx = chart.ctx;
                            ctx.save();
                            
                            // Set font trước khi measure
                            ctx.font = 'bold 12px Arial';
                            ctx.textAlign = 'center';
                            ctx.textBaseline = 'bottom';
                            
                            chart.data.datasets.forEach((dataset, i) => {
                                const meta = chart.getDatasetMeta(i);
                                if (!meta || !meta.data) return;
                                
                                meta.data.forEach((bar, index) => {
                                    if (!bar || typeof bar.x === 'undefined' || typeof bar.y === 'undefined') return;
                                    
                                    const value = dataset.data[index];
                                    if (value === 0 || value === null || value === undefined) return;
                                    
                                    // Định dạng số tiền
                                    let labelText = '';
                                    if (value >= 1000000000) {
                                        labelText = (value / 1000000000).toFixed(2) + ' tỷ';
                                    } else if (value >= 1000000) {
                                        labelText = (value / 1000000).toFixed(2) + ' tr';
                                    } else if (value >= 1000) {
                                        labelText = (value / 1000).toFixed(0) + ' k';
                                    } else {
                                        labelText = value.toLocaleString('vi-VN');
                                    }
                                    
                                    // Vị trí để vẽ nhãn (trên đầu cột)
                                    const x = bar.x;
                                    const y = bar.y - 8; // 8px phía trên cột
                                    
                                    // Đo kích thước text
                                    const textWidth = ctx.measureText(labelText).width;
                                    const textHeight = 14;
                                    
                                    // Vẽ background trắng với viền để dễ đọc
                                    ctx.fillStyle = 'rgba(255, 255, 255, 0.95)';
                                    ctx.fillRect(x - textWidth/2 - 5, y - textHeight - 3, textWidth + 10, textHeight + 4);
                                    
                                    // Vẽ border cho background
                                    ctx.strokeStyle = 'rgba(0, 0, 0, 0.1)';
                                    ctx.lineWidth = 1;
                                    ctx.strokeRect(x - textWidth/2 - 5, y - textHeight - 3, textWidth + 10, textHeight + 4);
                                    
                                    // Vẽ nhãn
                                    ctx.fillStyle = '#1e293b';
                                    ctx.fillText(labelText, x, y);
                                });
                            });
                            
                            ctx.restore();
                        }
                    };
                    
                    const totalLoanAmountChart = new Chart(totalLoanAmountCtx, {
                        type: 'bar',
                        data: chartData,
                        plugins: [drawLabelsPlugin],
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            layout: {
                                padding: {
                                    top: 30,
                                    bottom: 15,
                                    left: 10,
                                    right: 10
                                }
                            },
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'top'
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            let value = context.parsed.y;
                                            if (value >= 1000000000) {
                                                return 'Tổng vốn vay: ' + (value / 1000000000).toFixed(2) + ' tỷ VNĐ';
                                            } else if (value >= 1000000) {
                                                return 'Tổng vốn vay: ' + (value / 1000000).toFixed(2) + ' triệu VNĐ';
                                            } else if (value >= 1000) {
                                                return 'Tổng vốn vay: ' + (value / 1000).toFixed(2) + ' nghìn VNĐ';
                                            }
                                            return 'Tổng vốn vay: ' + value.toLocaleString('vi-VN') + ' VNĐ';
                                        }
                                    }
                                }
                            },
                            animation: {
                                duration: 0 // Tắt animation để nhãn hiển thị ngay
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: @suggestedMax,
                                    afterBuildTicks: function(scale) {
                                        // Tạo ticks từ danh sách đã tính toán
                                        scale.ticks = yTicksValues.map(function(value) {
                                            return { value: value };
                                        });
                                    },
                                    ticks: {
                                        callback: function(value) {
                                            if (value >= 1000000000) {
                                                return (value / 1000000000).toFixed(1) + ' tỷ';
                                            } else if (value >= 1000000) {
                                                return (value / 1000000).toFixed(0) + ' tr';
                                            } else if (value >= 1000) {
                                                return (value / 1000).toFixed(0) + ' k';
                                            }
                                            return value.toLocaleString('vi-VN');
                                        }
                                    },
                                    title: {
                                        display: true,
                                        text: 'Số tiền (VNĐ)'
                                    }
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Tháng'
                                    },
                                    ticks: {
                                        maxRotation: 0,
                                        minRotation: 0,
                                        padding: 5
                                    },
                                    grid: {
                                        display: false
                                    }
                                }
                            }
                        }
                    });
                    
                    // Đảm bảo nhãn được vẽ ngay sau khi chart được tạo
                    setTimeout(function() {
                        if (totalLoanAmountChart) {
                            totalLoanAmountChart.draw();
                        }
                    }, 100);
                    
                    // Vẽ lại nhãn khi chart resize
                    window.addEventListener('resize', function() {
                        if (totalLoanAmountChart) {
                            totalLoanAmountChart.update('none');
                        }
                    });
                    </text>
                }
            }
        });
    </script>
}

<style>
    /* Enhanced statistics view styles */
    .card {
        margin-bottom: 1.5rem;
