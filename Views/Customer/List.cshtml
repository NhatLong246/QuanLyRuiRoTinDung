@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "_DashboardLayout";
    
    var currentTab = ViewBag.CurrentTab as string ?? "my";
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var currentUserName = ViewBag.CurrentUserName as string ?? "Nhân viên";
    
    var myCaNhans = ViewBag.MyCaNhans as List<QuanLyRuiRoTinDung.Models.Entities.KhachHangCaNhan> ?? new();
    var myDoanhNghieps = ViewBag.MyDoanhNghieps as List<QuanLyRuiRoTinDung.Models.Entities.KhachHangDoanhNghiep> ?? new();
    var allCaNhans = ViewBag.AllCaNhans as List<QuanLyRuiRoTinDung.Models.Entities.KhachHangCaNhan> ?? new();
    var allDoanhNghieps = ViewBag.AllDoanhNghieps as List<QuanLyRuiRoTinDung.Models.Entities.KhachHangDoanhNghiep> ?? new();
    
    int myCaNhanCount = ViewBag.MyCaNhanCount;
    int myDoanhNghiepCount = ViewBag.MyDoanhNghiepCount;
    int allCaNhanCount = ViewBag.AllCaNhanCount;
    int allDoanhNghiepCount = ViewBag.AllDoanhNghiepCount;
    
    int myTotalCount = myCaNhanCount + myDoanhNghiepCount;
    int allTotalCount = allCaNhanCount + allDoanhNghiepCount;
}

<div class="customer-management">
    <!-- Animated Background -->
    <div class="page-bg-decoration">
        <div class="bg-circle circle-1"></div>
        <div class="bg-circle circle-2"></div>
        <div class="bg-circle circle-3"></div>
    </div>

    <!-- Header -->
    <div class="page-header">
        <div class="header-left">
            <div class="header-icon-wrapper">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21V19C17 17.9391 16.5786 16.9217 15.8284 16.1716C15.0783 15.4214 14.0609 15 13 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21V19C22.9993 18.1137 22.7044 17.2528 22.1614 16.5523C21.6184 15.8519 20.8581 15.3516 20 15.13"></path>
                    <path d="M16 3.13C16.8604 3.3503 17.623 3.8507 18.1676 4.55231C18.7122 5.25392 19.0078 6.11683 19.0078 7.005C19.0078 7.89317 18.7122 8.75608 18.1676 9.45769C17.623 10.1593 16.8604 10.6597 16 10.88"></path>
                </svg>
            </div>
            <div class="header-content">
                <h1 class="page-title">Quản lý khách hàng</h1>
                <p class="page-subtitle">Xem và quản lý danh sách khách hàng trong hệ thống</p>
            </div>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Create", "Customer")" class="btn-primary">
                <span class="btn-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                </span>
                <span class="btn-text">Tạo khách hàng mới</span>
                <span class="btn-shine"></span>
            </a>
        </div>
    </div>

    <!-- Filter Row - Search + Tabs on same line -->
    <div class="filter-row">
        <form method="get" action="@Url.Action("List", "Customer")" class="search-form">
            <input type="hidden" name="tab" value="@currentTab" />
            <div class="search-input-wrapper">
                <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
                <input type="text" name="searchTerm" placeholder="Tìm kiếm theo tên, CCCD/MST, SĐT, email, mã KH..." 
                       value="@searchTerm" class="search-input" />
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <a href="@Url.Action("List", "Customer", new { tab = currentTab })" class="clear-search" title="Xóa tìm kiếm">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                    </a>
                }
            </div>
            <button type="submit" class="btn-search">Tìm kiếm</button>
        </form>

        <!-- Tabs Navigation -->
        <div class="tabs-nav">
            <a href="@Url.Action("List", "Customer", new { tab = "my", searchTerm = searchTerm })" 
               class="tab-item @(currentTab == "my" ? "active" : "")">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Khách hàng của tôi</span>
                <span class="tab-badge">@myTotalCount</span>
            </a>
            <a href="@Url.Action("List", "Customer", new { tab = "all", searchTerm = searchTerm })" 
               class="tab-item @(currentTab == "all" ? "active" : "")">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21V19C17 17.9391 16.5786 16.9217 15.8284 16.1716C15.0783 15.4214 14.0609 15 13 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21V19C22.9993 18.1137 22.7044 17.2528 22.1614 16.5523C21.6184 15.8519 20.8581 15.3516 20 15.13"></path>
                    <path d="M16 3.13C16.8604 3.3503 17.623 3.8507 18.1676 4.55231C18.7122 5.25392 19.0078 6.11683 19.0078 7.005C19.0078 7.89317 18.7122 8.75608 18.1676 9.45769C17.623 10.1593 16.8604 10.6597 16 10.88"></path>
                </svg>
                <span>Tất cả khách hàng</span>
                <span class="tab-badge">@allTotalCount</span>
            </a>
        </div>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
        @if (currentTab == "my")
        {
            <!-- My Customers Tab -->
            <div class="tab-pane active" id="my-customers">
                <div class="section-header">
                    <h2 class="section-title">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        Khách hàng do tôi tạo
                    </h2>
                    <p class="section-subtitle">Danh sách khách hàng được tạo bởi: <strong>@currentUserName</strong></p>
                </div>

                <!-- Stats Cards - Centered and Wider -->
                <div class="stats-cards-wrapper">
                    <div class="stats-cards">
                        <div class="stat-card ca-nhan">
                            <div class="stat-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                            <div class="stat-info">
                                <span class="stat-value">@myCaNhanCount</span>
                                <span class="stat-label">Cá nhân</span>
                            </div>
                        </div>
                        <div class="stat-card doanh-nghiep">
                            <div class="stat-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z"></path>
                                    <path d="M9 22V12H15V22"></path>
                                </svg>
                            </div>
                            <div class="stat-info">
                                <span class="stat-value">@myDoanhNghiepCount</span>
                                <span class="stat-label">Doanh nghiệp</span>
                            </div>
                        </div>
                    </div>
                </div>

                @if (myTotalCount == 0)
                {
                    <div class="empty-state">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M9 15C9 15 10.5 16.5 12 16.5C13.5 16.5 15 15 15 15"></path>
                            <line x1="9" y1="9" x2="9.01" y2="9"></line>
                            <line x1="15" y1="9" x2="15.01" y2="9"></line>
                        </svg>
                        <h3>Chưa có khách hàng nào</h3>
                        <p>Bạn chưa tạo khách hàng nào. Hãy bắt đầu tạo khách hàng mới!</p>
                        <a href="@Url.Action("Create", "Customer")" class="btn-primary">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                            </svg>
                            Tạo khách hàng mới
                        </a>
                    </div>
                }
                else
                {
                    <!-- Customer Tables -->
                    @if (myCaNhans.Any())
                    {
                        <div class="table-section">
                            <h3 class="table-title">
                                <span class="badge ca-nhan">Cá nhân</span>
                                @myCaNhanCount khách hàng cá nhân
                            </h3>
                            <div class="table-responsive">
                                <table class="customer-table">
                                    <thead>
                                        <tr>
                                            <th>Mã KH</th>
                                            <th>Họ tên</th>
                                            <th>CCCD/CMND</th>
                                            <th>Số điện thoại</th>
                                            <th>Email</th>
                                            <th>Ngày tạo</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var kh in myCaNhans)
                                        {
                                            <tr>
                                                <td><span class="customer-code">@kh.MaKhachHangCode</span></td>
                                                <td><strong>@kh.HoTen</strong></td>
                                                <td>@kh.SoCmnd</td>
                                                <td>@kh.SoDienThoai</td>
                                                <td>@(kh.Email ?? "-")</td>
                                                <td>@kh.NgayTao?.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <a href="@Url.Action("DetailsCaNhan", "Customer", new { id = kh.MaKhachHang })" 
                                                           class="btn-action view" title="Xem chi tiết">
                                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                <path d="M1 12S5 4 12 4s11 8 11 8-4 8-11 8S1 12 1 12z"></path>
                                                                <circle cx="12" cy="12" r="3"></circle>
                                                            </svg>
                                                        </a>
                                                        <a href="@Url.Action("EditCaNhan", "Customer", new { id = kh.MaKhachHang })" 
                                                           class="btn-action edit" title="Cập nhật">
                                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                    @if (myDoanhNghieps.Any())
                    {
                        <div class="table-section">
                            <h3 class="table-title">
                                <span class="badge doanh-nghiep">Doanh nghiệp</span>
                                @myDoanhNghiepCount khách hàng doanh nghiệp
                            </h3>
                            <div class="table-responsive">
                                <table class="customer-table">
                                    <thead>
                                        <tr>
                                            <th>Mã KH</th>
                                            <th>Tên công ty</th>
                                            <th>Mã số thuế</th>
                                            <th>Người đại diện</th>
                                            <th>Số điện thoại</th>
                                            <th>Ngày tạo</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var kh in myDoanhNghieps)
                                        {
                                            <tr>
                                                <td><span class="customer-code">@kh.MaKhachHangCode</span></td>
                                                <td><strong>@kh.TenCongTy</strong></td>
                                                <td>@kh.MaSoThue</td>
                                                <td>@kh.NguoiDaiDienPhapLuat</td>
                                                <td>@kh.SoDienThoai</td>
                                                <td>@kh.NgayTao?.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <a href="@Url.Action("DetailsDoanhNghiep", "Customer", new { id = kh.MaKhachHang })" 
                                                           class="btn-action view" title="Xem chi tiết">
                                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                <path d="M1 12S5 4 12 4s11 8 11 8-4 8-11 8S1 12 1 12z"></path>
                                                                <circle cx="12" cy="12" r="3"></circle>
                                                            </svg>
                                                        </a>
                                                        <a href="@Url.Action("EditDoanhNghiep", "Customer", new { id = kh.MaKhachHang })" 
                                                           class="btn-action edit" title="Cập nhật">
                                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <!-- All Customers Tab -->
            <div class="tab-pane active" id="all-customers">
                <div class="section-header">
                    <h2 class="section-title">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21V19C17 17.9391 16.5786 16.9217 15.8284 16.1716C15.0783 15.4214 14.0609 15 13 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21V19C22.9993 18.1137 22.7044 17.2528 22.1614 16.5523C21.6184 15.8519 20.8581 15.3516 20 15.13"></path>
                            <path d="M16 3.13C16.8604 3.3503 17.623 3.8507 18.1676 4.55231C18.7122 5.25392 19.0078 6.11683 19.0078 7.005C19.0078 7.89317 18.7122 8.75608 18.1676 9.45769C17.623 10.1593 16.8604 10.6597 16 10.88"></path>
                        </svg>
                        Tất cả khách hàng
                    </h2>
                    <p class="section-subtitle">Danh sách tất cả khách hàng trong hệ thống</p>
                </div>

                <!-- Stats Cards - Centered and Wider -->
                <div class="stats-cards-wrapper">
                    <div class="stats-cards">
                        <div class="stat-card ca-nhan">
                            <div class="stat-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </div>
                            <div class="stat-info">
                                <span class="stat-value">@allCaNhanCount</span>
                                <span class="stat-label">Cá nhân</span>
                            </div>
                        </div>
                        <div class="stat-card doanh-nghiep">
                            <div class="stat-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z"></path>
                                    <path d="M9 22V12H15V22"></path>
                                </svg>
                            </div>
                            <div class="stat-info">
                                <span class="stat-value">@allDoanhNghiepCount</span>
                                <span class="stat-label">Doanh nghiệp</span>
                            </div>
                        </div>
                    </div>
                </div>

                @if (allTotalCount == 0)
                {
                    <div class="empty-state">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M9 15C9 15 10.5 16.5 12 16.5C13.5 16.5 15 15 15 15"></path>
                            <line x1="9" y1="9" x2="9.01" y2="9"></line>
                            <line x1="15" y1="9" x2="15.01" y2="9"></line>
                        </svg>
                        <h3>Chưa có khách hàng nào trong hệ thống</h3>
                        <p>Hệ thống chưa có dữ liệu khách hàng nào.</p>
                    </div>
                }
                else
                {
                    <!-- Customer Tables -->
                    @if (allCaNhans.Any())
                    {
                        <div class="table-section">
                            <h3 class="table-title">
                                <span class="badge ca-nhan">Cá nhân</span>
                                @allCaNhanCount khách hàng cá nhân
                            </h3>
                            <div class="table-responsive">
                                <table class="customer-table">
                                    <thead>
                                        <tr>
                                            <th>Mã KH</th>
                                            <th>Họ tên</th>
                                            <th>CCCD/CMND</th>
                                            <th>Số điện thoại</th>
                                            <th>Email</th>
                                            <th>Người tạo</th>
                                            <th>Ngày tạo</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var kh in allCaNhans)
                                        {
                                            <tr>
                                                <td><span class="customer-code">@kh.MaKhachHangCode</span></td>
                                                <td><strong>@kh.HoTen</strong></td>
                                                <td>@kh.SoCmnd</td>
                                                <td>@kh.SoDienThoai</td>
                                                <td>@(kh.Email ?? "-")</td>
                                                <td>
                                                    <span class="creator-name">
                                                        @(kh.NguoiTaoNavigation?.HoTen ?? "N/A")
                                                    </span>
                                                </td>
                                                <td>@kh.NgayTao?.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <a href="@Url.Action("DetailsCaNhan", "Customer", new { id = kh.MaKhachHang })" 
                                                           class="btn-action view" title="Xem chi tiết">
                                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                <path d="M1 12S5 4 12 4s11 8 11 8-4 8-11 8S1 12 1 12z"></path>
                                                                <circle cx="12" cy="12" r="3"></circle>
                                                            </svg>
                                                        </a>
                                                        <a href="@Url.Action("EditCaNhan", "Customer", new { id = kh.MaKhachHang })" 
                                                           class="btn-action edit" title="Cập nhật">
                                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                                            </svg>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                    @if (allDoanhNghieps.Any())
                    {
                        <div class="table-section">
                            <h3 class="table-title">
                                <span class="badge doanh-nghiep">Doanh nghiệp</span>
                                @allDoanhNghiepCount khách hàng doanh nghiệp
                            </h3>
                            <div class="table-responsive">
                                <table class="customer-table">
                                    <thead>
                                        <tr>
                                            <th>Mã KH</th>
                                            <th>Tên công ty</th>
                                            <th>Mã số thuế</th>
                                            <th>Người đại diện</th>
                                            <th>Số điện thoại</th>
                                            <th>Người tạo</th>
                                            <th>Ngày tạo</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var kh in allDoanhNghieps)
                                        {
                                            <tr>
                                                <td><span class="customer-code">@kh.MaKhachHangCode</span></td>
                                                <td><strong>@kh.TenCongTy</strong></td>
                                                <td>@kh.MaSoThue</td>
                                                <td>@kh.NguoiDaiDienPhapLuat</td>
                                                <td>@kh.SoDienThoai</td>
                                                <td>
                                                    <span class="creator-name">
                                                        @(kh.NguoiTaoNavigation?.HoTen ?? "N/A")
                                                    </span>
                                                </td>
                                                <td>@kh.NgayTao?.ToString("dd/MM/yyyy")</td>
                                                <td>
