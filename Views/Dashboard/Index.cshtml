 @model QuanLyRuiRoTinDung.Services.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<!-- Tổng quan công việc -->
<section class="work-overview">
    <div class="section-header">
        <h2 class="section-title">Tổng quan công việc</h2>
        <p class="welcome-message">Chào mừng quay trở lại. Hôm nay bạn có <strong>@Model.HoSoCanXuLy</strong> hồ sơ cần xử lý.</p>
    </div>

    <div class="action-buttons">
        <a href="@Url.Action("Index", "Customer")" class="action-btn btn-primary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <path d="M12 8V16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M8 12H16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <svg class="btn-icon-small" viewBox="0 0 24 24" fill="none">
                <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Tạo khách hàng mới</span>
        </a>
        <a href="@Url.Action("SelectCustomer", "Loan")" class="action-btn btn-primary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none">
                <path d="M14 2H6C5.46957 2 4.96086 2.21071 4.58579 2.58579C4.21071 2.96086 4 3.46957 4 4V20C4 20.5304 4.21071 21.0391 4.58579 21.4142C4.96086 21.7893 5.46957 22 6 22H18C18.5304 22 19.0391 21.7893 19.4142 21.4142C19.7893 21.0391 20 20.5304 20 20V8L14 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M14 2V8H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Tạo hồ sơ vay</span>
        </a>
        <a href="@Url.Action("Index", "Cic")" class="action-btn btn-secondary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none">
                <path d="M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2"/>
                <path d="M12 8V12L15 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Tra cứu CIC</span>
        </a>
    </div>

    <div class="summary-cards">
        <div class="summary-card">
            <div class="card-icon customers">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M17 21V19C17 17.9391 16.5786 16.9217 15.8284 16.1716C15.0783 15.4214 14.0609 15 13 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M9 11C11.2091 11 13 9.20914 13 7C13 4.79086 11.2091 3 9 3C6.79086 3 5 4.79086 5 7C5 9.20914 6.79086 11 9 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M23 21V19C22.9993 18.1137 22.7044 17.2528 22.1614 16.5523C21.6184 15.8519 20.8581 15.3516 20 15.13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M16 3.13C16.8604 3.35031 17.623 3.85071 18.1676 4.55232C18.7122 5.25392 19.0078 6.11683 19.0078 7.005C19.0078 7.89318 18.7122 8.75608 18.1676 9.45769C17.623 10.1593 16.8604 10.6597 16 10.88" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <div class="card-content">
                <div class="card-number">@Model.TongKhachHang.ToString("N0")</div>
                <div class="card-label">Tổng khách hàng</div>
                <div class="card-trend positive">
                    <svg viewBox="0 0 24 24" fill="none">
                        <path d="M18 15L12 9L6 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span>+12% so với tháng trước</span>
                </div>
            </div>
        </div>

        <div class="summary-card">
            <div class="card-icon documents">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M14 2H6C5.46957 2 4.96086 2.21071 4.58579 2.58579C4.21071 2.96086 4 3.46957 4 4V20C4 20.5304 4.21071 21.0391 4.58579 21.4142C4.96086 21.7893 5.46957 22 6 22H18C18.5304 22 19.0391 21.7893 19.4142 21.4142C19.7893 21.0391 20 20.5304 20 20V8L14 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M14 2V8H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <div class="card-content">
                <div class="card-number">@Model.TongHoSoVay.ToString("N0")</div>
                <div class="card-label">Tổng hồ sơ vay</div>
                <div class="card-status">Đang quản lý</div>
            </div>
        </div>

        <div class="summary-card">
            <div class="card-icon pending">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"/>
                    <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <div class="card-content">
                <div class="card-number">@Model.ChoPheDuyet</div>
                <div class="card-label">Chờ phê duyệt</div>
                <div class="card-status">Đã gửi đi</div>
            </div>
        </div>

        <div class="summary-card">
            <div class="card-icon request">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M3 7V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M8 11L12 7L16 11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <div class="card-content">
                <div class="card-number">@Model.YeuCauBoSung</div>
                <div class="card-label">Hồ sơ nháp</div>
                <div class="card-status">Cần chỉnh sửa</div>
            </div>
        </div>
    </div>
</section>

<!-- Trạng thái khoản vay & Cảnh báo -->
<section class="status-alerts">
    <div class="status-panel">
        <h3 class="panel-title">Trạng thái khoản vay</h3>
        <div class="status-list">
            <div class="status-item">
                <div class="status-info">
                    <span class="status-label">Đang hoạt động</span>
                    <span class="status-percent">@Model.TyLeDangHoatDong.ToString("F0")%</span>
                </div>
                <div class="status-bar">
                    <div class="status-progress active" style="width: @Model.TyLeDangHoatDong.ToString("F0")%"></div>
                </div>
            </div>
            <div class="status-item">
                <div class="status-info">
                    <span class="status-label">Đến hạn (7 ngày)</span>
                    <span class="status-percent">@Model.TyLeDenHan7Ngay.ToString("F0")%</span>
                </div>
                <div class="status-bar">
                    <div class="status-progress warning" style="width: @Model.TyLeDenHan7Ngay.ToString("F0")%"></div>
                </div>
            </div>
            <div class="status-item">
                <div class="status-info">
                    <span class="status-label">Quá hạn</span>
                    <span class="status-percent">@Model.TyLeQuaHan.ToString("F0")%</span>
                </div>
                <div class="status-bar">
                    <div class="status-progress danger" style="width: @Model.TyLeQuaHan.ToString("F0")%"></div>
                </div>
            </div>
        </div>
        <a href="#" class="view-report-link">Xem báo cáo chi tiết →</a>
    </div>

    <div class="alerts-panel">
        <div class="panel-header">
            <h3 class="panel-title">
                <svg class="alert-icon" viewBox="0 0 24 24" fill="none">
                    <path d="M10.29 3.86L1.82 18C1.64537 18.3024 1.55299 18.6453 1.55201 18.9945C1.55103 19.3437 1.64151 19.6871 1.81445 19.9905C1.98738 20.2939 2.23675 20.5467 2.53773 20.7238C2.83871 20.9009 3.18082 20.9962 3.53 21H20.47C20.8192 20.9962 21.1613 20.9009 21.4623 20.7238C21.7633 20.5467 22.0126 20.2939 22.1856 19.9905C22.3585 19.6871 22.449 19.3437 22.448 18.9945C22.447 18.6453 22.3546 18.3024 22.18 18L13.71 3.86C13.5318 3.56611 13.2807 3.32311 12.9812 3.15448C12.6817 2.98585 12.3438 2.89725 12 2.89725C11.6562 2.89725 11.3183 2.98585 11.0188 3.15448C10.7193 3.32311 10.4682 3.56611 10.29 3.86Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12 9V13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12 17H12.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Cảnh báo cần chú ý
            </h3>
            <span class="alert-badge">@Model.CanhBaos.Count cảnh báo mới</span>
        </div>
        <div class="alerts-list">
            @if (Model.CanhBaos.Any())
            {
                @foreach (var canhBao in Model.CanhBaos)
                {
                    var isUrgent = canhBao.MucDoNghiemTrong == "Khẩn cấp" || canhBao.MucDoNghiemTrong == "Cao";
                    var alertClass = isUrgent ? "alert-item urgent" : "alert-item warning";
                    var khoanVay = canhBao.MaKhoanVayNavigation;
                    var soTien = khoanVay?.SoTienVay ?? 0;
                    var soNgayQuaHan = khoanVay?.SoNgayQuaHan ?? 0;
                    
                    <div class="@alertClass">
                        <div class="alert-icon-wrapper">
                            @if (canhBao.MaLoaiCanhBaoNavigation?.TenLoaiCanhBao?.Contains("Quá hạn") == true)
                            {
                                <svg viewBox="0 0 24 24" fill="none">
                                    <rect x="3" y="4" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                                    <path d="M16 2V6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    <path d="M8 2V6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                                    <path d="M3 10H21" stroke="currentColor" stroke-width="2"/>
                                    <path d="M9 16L12 13L15 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            }
                            else
                            {
                                <svg viewBox="0 0 24 24" fill="none">
                                    <path d="M3 3V21H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    <path d="M7 16L12 11L16 15L21 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    <path d="M21 10H16V15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            }
                        </div>
                        <div class="alert-content">
                            <div class="alert-title">@canhBao.TieuDe</div>
                            <div class="alert-details">
                                @if (khoanVay != null)
                                {
                                    <span>Mã HS: #@khoanVay.MaKhoanVayCode</span>
                                    @if (soNgayQuaHan > 0)
                                    {
                                        <span>• Quá hạn @soNgayQuaHan ngày</span>
                                    }
                                    <span>• Số tiền: @soTien.ToString("N0") ₫</span>
                                }
                                else
                                {
                                    <span>@canhBao.NoiDung</span>
                                }
                            </div>
                            <button class="alert-action-btn">@(isUrgent ? "Xử lý ngay" : "Kiểm tra")</button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-alerts">Không có cảnh báo nào</div>
            }
        </div>
    </div>
</section>

<!-- Hồ sơ vay cần xử lý -->
<section class="loan-applications">
    <div class="section-header-row">
        <h2 class="section-title">Hồ sơ vay cần xử lý</h2>
        <div class="section-actions">
            <button class="action-icon-btn">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M22 3H2L10 12.46V19L14 21V12.46L22 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>Lọc</span>
            </button>
            <button class="action-icon-btn">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M3 6H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M7 12H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <path d="M11 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
                <span>Sắp xếp</span>
            </button>
        </div>
    </div>

    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>MÃ HỒ SƠ</th>
                    <th>KHÁCH HÀNG</th>
                    <th>SỐ TIỀN VAY (VND)</th>
                    <th>TRẠNG THÁI</th>
                    <th>MỨC RỦI RO</th>
                    <th>HẠN XỬ LÝ</th>
                    <th>THAO TÁC</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.HoSoVayCanXuLy.Any())
                {
                    @foreach (var hoSo in Model.HoSoVayCanXuLy)
                    {
                        var trangThaiClass = hoSo.TrangThaiKhoanVay switch
                        {
                            "Đã duyệt" => "status-badge status-pending",
                            "Chờ bổ sung" => "status-badge status-request",
                            "Đang xử lý" => "status-badge status-processing",
                            _ => "status-badge"
                        };
                        
                        var riskClass = hoSo.MucDoRuiRo switch
                        {
                            "Thấp" => "risk-badge risk-low",
                            "Trung bình" => "risk-badge risk-medium",
                            "Cao" => "risk-badge risk-high",
                            "Rất cao" => "risk-badge risk-very-high",
                            _ => "risk-badge"
                        };
                        
                        <tr>
                            <td>
                                <a href="#" class="loan-code">#@hoSo.MaKhoanVayCode</a>
                            </td>
                            <td>@(hoSo.TenKhachHang ?? "N/A")</td>
                            <td>@hoSo.SoTienVay.ToString("N0")</td>
                            <td>
                                <span class="@trangThaiClass">@hoSo.TrangThaiKhoanVay</span>
                            </td>
                            <td>
                                <span class="@riskClass">
                                    <span class="risk-dot"></span>
                                    @(hoSo.MucDoRuiRo ?? "Chưa đánh giá")
                                </span>
                            </td>
                            <td>@(hoSo.NgayNopHoSo?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>
                                <button class="action-btn-small">Xem</button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="no-data">Không có hồ sơ nào cần xử lý</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/2.0.7/velocity.min.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
}