        const defaultAnimation = {
            duration: 2000,
            easing: 'easeOutQuart',
            delay: (context) => {
                let delay = 0;
                if (context.type === 'data' && context.mode === 'default') {
                    delay = context.dataIndex * 100 + context.datasetIndex * 50;
                }
                return delay;
            }
        };

        const slowAnimation = {
            duration: 2500,
            easing: 'easeOutCubic'
        };

        // Color palette
        const colors = {
            primary: '#6366F1',
            success: '#10B981',
            warning: '#F59E0B',
            danger: '#EF4444',
            info: '#3B82F6',
            purple: '#8B5CF6',
            pink: '#EC4899',
            teal: '#14B8A6'
        };

        const gradientColors = [
            { start: '#6366F1', end: '#8B5CF6' },
            { start: '#10B981', end: '#34D399' },
            { start: '#F59E0B', end: '#FBBF24' },
