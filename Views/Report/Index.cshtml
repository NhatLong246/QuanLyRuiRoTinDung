    <!-- Summary Cards -->
    <div class="summary-grid">
        <div class="summary-card pending">
            <div class="card-header">
                <div class="card-icon pending">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M12 6v6l4 2"/>
                    </svg>
                </div>
            </div>
            <div class="card-body">
                <div class="card-value">@Model.PendingLoans</div>
                <div class="card-label">Hồ sơ chờ duyệt</div>
            </div>
            <div class="card-sub">
                Tổng giá trị: <strong>@((Model.PendingAmount / 1000000).ToString("N0")) triệu</strong>
            </div>
        </div>

        <div class="summary-card approved">
            <div class="card-header">
                <div class="card-icon approved">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <path d="M22 4 12 14.01l-3-3"/>
                    </svg>
                </div>
                @if (trendData.LoanGrowthRate != 0)
                {
                    <div class="card-trend @(trendData.LoanGrowthRate >= 0 ? "up" : "down")">
