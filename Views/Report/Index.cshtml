</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        // Data from server
        const monthlyData = @Html.Raw(Json.Serialize(monthlyData));
        const quarterlyData = @Html.Raw(Json.Serialize(quarterlyData));
        const loansByStatus = @Html.Raw(Json.Serialize(loansByStatus));
        const loansByType = @Html.Raw(Json.Serialize(loansByType));
        const riskLevelData = @Html.Raw(Json.Serialize(riskLevelData));
        const customerTypeData = @Html.Raw(Json.Serialize(customerTypeData));

        // Global animation options - Chậm hơn để mượt mà
        const defaultAnimation = {
            duration: 2000,
            easing: 'easeOutQuart',
            delay: (context) => {
                let delay = 0;
                if (context.type === 'data' && context.mode === 'default') {
                    delay = context.dataIndex * 100 + context.datasetIndex * 50;
                }
                return delay;
            }
        };

        const slowAnimation = {
            duration: 2500,
            easing: 'easeOutCubic'
        };

        // Color palette
        const colors = {
            primary: '#6366F1',
            success: '#10B981',
            warning: '#F59E0B',
            danger: '#EF4444',
            info: '#3B82F6',
            purple: '#8B5CF6',
            pink: '#EC4899',
            teal: '#14B8A6'
        };

        const gradientColors = [
            { start: '#6366F1', end: '#8B5CF6' },
            { start: '#10B981', end: '#34D399' },
            { start: '#F59E0B', end: '#FBBF24' },
            { start: '#EF4444', end: '#F87171' },
            { start: '#3B82F6', end: '#60A5FA' },
            { start: '#EC4899', end: '#F472B6' }
        ];

        // Helper function to create gradient
        function createGradient(ctx, color1, color2) {
            const gradient = ctx.createLinearGradient(0, 0, 0, 300);
            gradient.addColorStop(0, color1);
            gradient.addColorStop(1, color2);
            return gradient;
        }

        // 1. Monthly Chart
        const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
        let monthlyChart;

        function initMonthlyChart(viewType = 'amount') {
            if (monthlyChart) monthlyChart.destroy();

            const labels = monthlyData.map(d => d.monthName);
            let datasets;

            if (viewType === 'amount') {
                datasets = [
                    {
                        label: 'Tổng đề xuất',
                        data: monthlyData.map(d => d.totalAmount / 1000000),
                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                        borderColor: colors.primary,
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        pointBackgroundColor: colors.primary
                    },
                    {
                        label: 'Đã giải ngân',
                        data: monthlyData.map(d => d.disbursedAmount / 1000000),
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        borderColor: colors.success,
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        pointBackgroundColor: colors.success
                    }
                ];
            } else {
                datasets = [
                    {
                        label: 'Tổng hồ sơ',
                        data: monthlyData.map(d => d.count),
                        backgroundColor: colors.primary,
                        borderRadius: 6,
                        barPercentage: 0.6
                    },
                    {
                        label: 'Đã duyệt',
                        data: monthlyData.map(d => d.approvedCount),
                        backgroundColor: colors.success,
                        borderRadius: 6,
                        barPercentage: 0.6
                    },
                    {
                        label: 'Chờ duyệt',
                        data: monthlyData.map(d => d.pendingCount),
                        backgroundColor: colors.warning,
                        borderRadius: 6,
                        barPercentage: 0.6
                    }
                ];
            }

            monthlyChart = new Chart(monthlyCtx, {
                type: viewType === 'amount' ? 'line' : 'bar',
                data: { labels, datasets },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    animation: defaultAnimation,
                    interaction: {
                        mode: 'index',
                        intersect: false
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                padding: 20,
                                font: { size: 12 }
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(17, 24, 39, 0.9)',
                            padding: 12,
                            cornerRadius: 8,
                            titleFont: { size: 13, weight: 'bold' },
                            bodyFont: { size: 12 },
                            callbacks: {
                                label: function(context) {
                                    if (viewType === 'amount') {
                                        return context.dataset.label + ': ' + context.raw.toLocaleString() + ' triệu';
                                    }
                                    return context.dataset.label + ': ' + context.raw + ' hồ sơ';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(0,0,0,0.05)' },
                            ticks: {
                                callback: function(value) {
                                    if (viewType === 'amount') {
                                        return value.toLocaleString() + ' tr';
                                    }
                                    return value;
                                }
                            }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });
        }

        function switchMonthlyView(viewType, btn) {
            document.querySelectorAll('.chart-tab').forEach(t => t.classList.remove('active'));
            btn.classList.add('active');
            initMonthlyChart(viewType);
        }

        initMonthlyChart('amount');

        // 2. Status Doughnut Chart
        const statusCtx = document.getElementById('statusChart').getContext('2d');
        const statusColors = {
            'Chờ duyệt': colors.warning,
            'Đang xử lý': colors.info,
            'Đã phê duyệt': colors.success,
            'Đã giải ngân': colors.primary,
            'Đang vay': colors.teal,
            'Đã thanh toán': colors.purple,
            'Từ chối': colors.danger
        };

        new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: loansByStatus.map(d => d.status),
                datasets: [{
                    data: loansByStatus.map(d => d.count),
                    backgroundColor: loansByStatus.map(d => statusColors[d.status] || colors.info),
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '65%',
                animation: {
                    animateRotate: true,
                    animateScale: true,
                    duration: 2500,
                    easing: 'easeOutQuart'
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 15,
                            font: { size: 11 }
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(17, 24, 39, 0.9)',
                        padding: 12,
                        cornerRadius: 8
                    }
                }
            }
        });

        // 3. Quarterly Chart
        const quarterlyCtx = document.getElementById('quarterlyChart').getContext('2d');
        new Chart(quarterlyCtx, {
            type: 'bar',
            data: {
                labels: quarterlyData.map(d => d.quarterName),
                datasets: [
                    {
                        label: 'Đã duyệt',
                        data: quarterlyData.map(d => d.approvedCount),
                        backgroundColor: colors.success,
                        borderRadius: 6
                    },
                    {
                        label: 'Chờ duyệt',
                        data: quarterlyData.map(d => d.pendingCount),
                        backgroundColor: colors.warning,
                        borderRadius: 6
                    },
                    {
                        label: 'Từ chối',
                        data: quarterlyData.map(d => d.rejectedCount),
                        backgroundColor: colors.danger,
                        borderRadius: 6
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: defaultAnimation,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: { usePointStyle: true, padding: 15 }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        stacked: false,
                        grid: { color: 'rgba(0,0,0,0.05)' }
                    },
                    x: {
                        stacked: false,
                        grid: { display: false }
                    }
                }
            }
        });

        // 4. Loan Type Chart
        const loanTypeCtx = document.getElementById('loanTypeChart').getContext('2d');
        new Chart(loanTypeCtx, {
            type: 'bar',
            data: {
                labels: loansByType.map(d => d.loanTypeName),
                datasets: [{
                    label: 'Số hồ sơ',
                    data: loansByType.map(d => d.count),
                    backgroundColor: loansByType.map((_, i) => gradientColors[i % gradientColors.length].start),
                    borderRadius: 8,
                    barPercentage: 0.7
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                animation: defaultAnimation,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        grid: { color: 'rgba(0,0,0,0.05)' }
                    },
                    y: {
                        grid: { display: false }
                    }
                }
            }
        });

        // 5. Risk Chart
        const riskCtx = document.getElementById('riskChart').getContext('2d');
        const riskColors = {
            'Thấp': colors.success,
            'Trung bình': colors.warning,
            'Cao': '#F97316',
            'Rất cao': colors.danger
        };

        new Chart(riskCtx, {
            type: 'polarArea',
            data: {
                labels: riskLevelData.map(d => d.riskLevel),
                datasets: [{
                    data: riskLevelData.map(d => d.count),
                    backgroundColor: riskLevelData.map(d => riskColors[d.riskLevel] + '99'),
                    borderColor: riskLevelData.map(d => riskColors[d.riskLevel]),
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: {
                    animateRotate: true,
                    animateScale: true,
                    duration: 2500
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { usePointStyle: true, padding: 15 }
                    }
                }
            }
        });

        // 6. Customer Type Chart
        const customerCtx = document.getElementById('customerChart').getContext('2d');
        new Chart(customerCtx, {
            type: 'doughnut',
            data: {
                labels: customerTypeData.map(d => d.customerType),
                datasets: [{
                    data: customerTypeData.map(d => d.count),
                    backgroundColor: [colors.primary, colors.success],
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '65%',
                animation: {
                    animateRotate: true,
                    animateScale: true,
                    duration: 2500
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { usePointStyle: true, padding: 15 }
                    }
                }
            }
        });

        // Filter functions
        function applyFilters() {
            const year = document.getElementById('yearFilter').value;
            const quarter = document.getElementById('quarterFilter').value;
            const month = document.getElementById('monthFilter').value;
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;

            let url = '@Url.Action("Index", "Report")?';
            if (year) url += `year=${year}&`;
            if (quarter) url += `quarter=${quarter}&`;
            if (month) url += `month=${month}&`;
            if (fromDate) url += `fromDate=${fromDate}&`;
            if (toDate) url += `toDate=${toDate}&`;

            window.location.href = url.slice(0, -1);
        }

        function resetFilters() {
            window.location.href = '@Url.Action("Index", "Report")';
        }

        function exportReport(format) {
            const year = document.getElementById('yearFilter').value;
            const quarter = document.getElementById('quarterFilter').value;
            const month = document.getElementById('monthFilter').value;
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;

            let url = `@Url.Action("Export", "Report")?format=${format}&`;
            if (year) url += `year=${year}&`;
            if (quarter) url += `quarter=${quarter}&`;
            if (month) url += `month=${month}&`;
            if (fromDate) url += `fromDate=${fromDate}&`;
            if (toDate) url += `toDate=${toDate}&`;

            window.open(url.slice(0, -1), '_blank');
        }

        // Add enter key support for date inputs
        document.getElementById('fromDate').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') applyFilters();
        });
        document.getElementById('toDate').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') applyFilters();
        });
    </script>
