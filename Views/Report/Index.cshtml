                }
            </div>
            <div class="card-body">
                <div class="card-value">@Model.ApprovedLoans</div>
                <div class="card-label">Hồ sơ đã duyệt</div>
            </div>
            <div class="card-sub">
                Tổng giá trị: <strong>@((Model.ApprovedAmount / 1000000).ToString("N0")) triệu</strong>
            </div>
        </div>

        <div class="summary-card debt">
            <div class="card-header">
                <div class="card-icon debt">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 1v22"/>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
                    </svg>
                </div>
            </div>
            <div class="card-body">
                <div class="card-value">@((Model.TotalOutstandingDebt / 1000000000).ToString("N2")) tỷ</div>
                <div class="card-label">Tổng dư nợ</div>
            </div>
            <div class="card-sub">
                Chỉ tính hồ sơ <strong>đã duyệt & đang vay</strong>
            </div>
        </div>

        <div class="summary-card rate">
            <div class="card-header">
                <div class="card-icon rate">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 20V10"/>
                        <path d="M18 20V4"/>
                        <path d="M6 20v-4"/>
                    </svg>
                </div>
            </div>
            <div class="card-body">
                <div class="card-value">@Model.AverageInterestRate.ToString("N2")%</div>
                <div class="card-label">Lãi suất TB</div>
            </div>
            <div class="card-sub">
                Tỷ lệ phê duyệt: <strong>@Model.ApprovalRate%</strong>
            </div>
        </div>
    </div>

    <!-- Mini Stats Row -->
    <div class="stats-row">
        <div class="stat-mini">
            <div class="stat-mini-icon total">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <path d="M14 2v6h6"/>
                </svg>
            </div>
            <div class="stat-mini-info">
                <div class="stat-mini-value">@Model.TotalLoans</div>
                <div class="stat-mini-label">Tổng hồ sơ</div>
            </div>
        </div>

        <div class="stat-mini">
            <div class="stat-mini-icon active">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
            </div>
            <div class="stat-mini-info">
                <div class="stat-mini-value">@Model.ActiveLoans</div>
                <div class="stat-mini-label">Đang vay</div>
            </div>
        </div>

        <div class="stat-mini">
            <div class="stat-mini-icon completed">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M9 12l2 2 4-4"/>
                </svg>
            </div>
            <div class="stat-mini-info">
                <div class="stat-mini-value">@Model.CompletedLoans</div>
                <div class="stat-mini-label">Đã thanh toán</div>
            </div>
        </div>

        <div class="stat-mini">
            <div class="stat-mini-icon rejected">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M15 9l-6 6"/>
                    <path d="M9 9l6 6"/>
                </svg>
            </div>
            <div class="stat-mini-info">
                <div class="stat-mini-value">@Model.RejectedLoans</div>
                <div class="stat-mini-label">Từ chối</div>
            </div>
        </div>

        <div class="stat-mini">
            <div class="stat-mini-icon overdue">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                    <path d="M12 9v4"/>
                    <path d="M12 17h.01"/>
                </svg>
            </div>
            <div class="stat-mini-info">
                <div class="stat-mini-value">@Model.OverdueLoans</div>
                <div class="stat-mini-label">Quá hạn</div>
            </div>
        </div>

        <div class="stat-mini">
            <div class="stat-mini-icon term">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <path d="M16 2v4"/>
                    <path d="M8 2v4"/>
                    <path d="M3 10h18"/>
                </svg>
            </div>
            <div class="stat-mini-info">
                <div class="stat-mini-value">@Model.AverageTerm tháng</div>
                <div class="stat-mini-label">Kỳ hạn TB</div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-grid">
        <!-- Row 1: Monthly Trend & Status -->
        <div class="charts-row-2">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Xu hướng khoản vay theo tháng</h3>
                    <div class="chart-tabs">
                        <button class="chart-tab active" data-view="amount" onclick="switchMonthlyView('amount', this)">Số tiền</button>
                        <button class="chart-tab" data-view="count" onclick="switchMonthlyView('count', this)">Số lượng</button>
                    </div>
                </div>
                <div class="chart-body">
                    <canvas id="monthlyChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Trạng thái hồ sơ</h3>
                </div>
                <div class="chart-body donut">
                    <canvas id="statusChart"></canvas>
                    <div class="donut-center">
                        <span class="donut-value">@Model.TotalLoans</span>
                        <span class="donut-label">Tổng hồ sơ</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Row 2: Quarterly & Loan Types -->
        <div class="charts-row-3">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Thống kê theo quý</h3>
                </div>
                <div class="chart-body">
                    <canvas id="quarterlyChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Phân loại khoản vay</h3>
                </div>
                <div class="chart-body">
                    <canvas id="loanTypeChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Row 3: Risk & Customer -->
        <div class="charts-row-3">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Mức độ rủi ro</h3>
                </div>
                <div class="chart-body">
                    <canvas id="riskChart"></canvas>
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Loại khách hàng</h3>
                </div>
                <div class="chart-body donut">
                    <canvas id="customerChart"></canvas>
                    <div class="donut-center">
                        <span class="donut-value">@(Model.IndividualCustomers + Model.EnterpriseCustomers)</span>
                        <span class="donut-label">Khách hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="table-card">
        <div class="table-header">
            <h3 class="table-title">Chi tiết theo loại khoản vay</h3>
        </div>
        <div class="table-body">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Loại khoản vay</th>
                        <th class="text-center">Tổng hồ sơ</th>
                        <th class="text-center">Đã duyệt</th>
