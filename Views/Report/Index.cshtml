                        <th class="text-right">Đã duyệt</th>
                    </tr>
                </thead>
                <tbody>
                    @if (loansByType.Any())
                    {
                        @foreach (var item in loansByType)
                        {
                            <tr>
                                <td>@item.LoanTypeName</td>
                                <td class="text-center">@item.Count.ToString("N0")</td>
                                <td class="text-center">
                                    <span class="status-badge approved">@item.ApprovedCount.ToString("N0")</span>
                                </td>
                                <td class="text-right">@((item.TotalAmount / 1000000).ToString("N0")) triệu</td>
                                <td class="text-right">@((item.ApprovedAmount / 1000000).ToString("N0")) triệu</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
