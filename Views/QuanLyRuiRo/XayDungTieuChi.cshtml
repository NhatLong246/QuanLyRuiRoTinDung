}

<div class="page-header">
    <div class="header-content">
        <div>
            <h1 class="page-title">Xây dựng Tiêu chí Đánh giá Rủi ro</h1>
            <p class="page-subtitle">Thiết lập và quản lý các tiêu chí đánh giá rủi ro, trọng số và thang điểm</p>
        </div>
        <a href="@Url.Action("Index", "QuanLyRuiRo")" class="btn-back">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19L5 12L12 5"/>
            </svg>
            Quay lại
        </a>
    </div>
</div>

<div class="content-section">
    <!-- Add New Criteria Card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm Tiêu chí Mới</h3>
        </div>
        <div class="card-body">
            <form class="criteria-form">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Tên tiêu chí <span class="required">*</span></label>
                        <input type="text" class="form-control" placeholder="Ví dụ: Lịch sử tín dụng" required />
                    </div>
                    <div class="form-group">
                        <label>Mã tiêu chí</label>
                        <input type="text" class="form-control" placeholder="TC-001" />
                    </div>
                    <div class="form-group">
                        <label>Loại khách hàng <span class="required">*</span></label>
                        <select class="form-control" required>
                            <option value="">Chọn loại khách hàng</option>
                            <option value="CaNhan">Cá nhân</option>
                            <option value="DoanhNghiep">Doanh nghiệp</option>
                            <option value="TatCa">Tất cả</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Trọng số (%) <span class="required">*</span></label>
                        <input type="number" class="form-control" placeholder="0-100" min="0" max="100" step="0.01" required />
                    </div>
                    <div class="form-group">
                        <label>Điểm tối thiểu</label>
                        <input type="number" class="form-control" placeholder="0" min="0" />
                    </div>
                    <div class="form-group">
                        <label>Điểm tối đa</label>
                        <input type="number" class="form-control" placeholder="100" min="0" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <textarea class="form-control" rows="3" placeholder="Mô tả chi tiết về tiêu chí này..."></textarea>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M5 13L9 17L19 7"/>
                        </svg>
                        Lưu Tiêu chí
                    </button>
                    <button type="reset" class="btn btn-secondary">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 6H5H21M8 6V4C8 3.46957 8.21071 2.96086 8.58579 2.58579C8.96086 2.21071 9.46957 2 10 2H14C14.5304 2 15.0391 2.21071 15.4142 2.58579C15.7893 2.96086 16 3.46957 16 4V6M19 6V20C19 20.5304 18.7893 21.0391 18.4142 21.4142C18.0391 21.7893 17.5304 22 17 22H7C6.46957 22 5.96086 21.7893 5.58579 21.4142C5.21071 21.0391 5 20.5304 5 20V6H19Z"/>
                        </svg>
                        Đặt lại
                    </button>
                </div>
            </form>
        </div>
    </div>

