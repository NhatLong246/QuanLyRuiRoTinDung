@{
    Layout = "_QuanLyRuiRoLayout";
    ViewData["Title"] = "Thẩm định Rủi ro Tín dụng";
}

<div class="page-header">
    <div class="header-content">
        <div>
            <h1 class="page-title">Thẩm định Rủi ro Tín dụng</h1>
            <p class="page-subtitle">Đánh giá và phân tích rủi ro tín dụng cho các khoản vay</p>
        </div>
        <a href="@Url.Action("Index", "QuanLyRuiRo")" class="btn-back">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19L5 12L12 5"/>
            </svg>
            Quay lại
        </a>
    </div>
</div>

<div class="content-section">
    <!-- Filter Section -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Tìm kiếm và Lọc</h3>
        </div>
        <div class="card-body">
            <div class="filter-form">
                <div class="form-row">
                    <div class="form-group">
                        <label>Mã khoản vay</label>
                        <input type="text" class="form-control" placeholder="Nhập mã khoản vay..." />
                    </div>
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <select class="form-control">
                            <option value="">Tất cả</option>
                            <option value="ChuaDanhGia">Chưa đánh giá</option>
                            <option value="DangDanhGia">Đang đánh giá</option>
                            <option value="DaDanhGia">Đã đánh giá</option>
                            <option value="DaPheDuyet">Đã phê duyệt</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Mức độ rủi ro</label>
                        <select class="form-control">
                            <option value="">Tất cả</option>
                            <option value="Thap">Thấp</option>
                            <option value="TrungBinh">Trung bình</option>
                            <option value="Cao">Cao</option>
                            <option value="RatCao">Rất cao</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <button class="btn btn-primary">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="11" cy="11" r="8"/>
                                <path d="M21 21L16.65 16.65"/>
                            </svg>
                            Tìm kiếm
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Assessment List -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Thẩm định</h3>
            <button class="btn btn-primary btn-sm">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 5V19M5 12H19"/>
                </svg>
                Thẩm định mới
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Mã khoản vay</th>
                            <th>Khách hàng</th>
                            <th>Số tiền vay</th>
                            <th>Ngày đánh giá</th>
                            <th>Điểm rủi ro</th>
                            <th>Mức độ</th>
                            <th>Xếp hạng</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span class="code-badge">KV-2024-001</span></td>
                            <td>Nguyễn Văn A</td>
                            <td>500,000,000 VNĐ</td>
                            <td>15/01/2024</td>
                            <td><span class="score-badge score-high">75.5</span></td>
                            <td><span class="risk-badge risk-high">Cao</span></td>
                            <td><span class="rating-badge">BB</span></td>
                            <td><span class="status-badge status-pending">Đang đánh giá</span></td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-icon" title="Xem chi tiết">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M1 12S5 4 12 4S23 12 23 12S19 20 12 20S1 12 1 12Z"/>
                                            <circle cx="12" cy="12" r="3"/>
                                        </svg>
                                    </button>
                                    <button class="btn-icon" title="Chỉnh sửa">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
