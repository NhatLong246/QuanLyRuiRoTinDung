@model QuanLyRuiRoTinDung.Models.ChangePasswordViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="login-container">
    <!-- Left Panel: Branding & Image -->
    <div class="login-left-panel">
        <div class="login-overlay"></div>
        <div class="login-content-wrapper">
            <!-- Logo -->
            <div class="login-logo" data-animate="logo">
                <img src="~/asset/image/icons8-bank-100.png" alt="Bank Logo" class="logo-icon" />
                <span class="logo-text">Ngân hàng TMCP</span>
            </div>

            <!-- Main Title -->
            <h1 class="login-main-title" data-animate="title">
                Hệ thống Quản lý Rủi ro Tín dụng
            </h1>

            <!-- Footer -->
            <div class="login-footer-wrapper" data-animate="footer">
                <!-- Description -->
                <p class="login-description" data-animate="description">
                    Nền tảng bảo mật cấp doanh nghiệp dành cho chuyên viên tín dụng. 
                    Truy cập dữ liệu thời gian thực và công cụ phân tích rủi ro.
                </p>
                
                <div class="login-footer">
                    <span class="copyright">© 2024 SmartBanking Corp</span>
                    <span class="separator">•</span>
                    <a href="#" class="footer-link">Privacy Policy</a>
                    <span class="separator">•</span>
                    <a href="#" class="footer-link">Terms of Service</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Panel: Change Password Form -->
    <div class="login-right-panel">
        <div class="login-form-wrapper">
            <!-- Form Title -->
            <div class="form-header" data-animate="form-header">
                <h2 class="form-title">Đổi mật khẩu</h2>
                <p class="form-subtitle">Nhập mật khẩu mới cho tài khoản của bạn</p>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            <!-- Change Password Form -->
            <form asp-action="ChangePassword" asp-controller="Account" method="post" class="login-form" id="changePasswordForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Email" />

                <!-- Email Display (Read-only) -->
                <div class="form-group" data-animate="input-1">
                    <label class="form-label">Email</label>
                    <div class="input-wrapper">
                        <input type="email" value="@Model.Email" class="form-control" readonly />
                        <span class="input-icon input-icon-left">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z" fill="currentColor"/>
                            </svg>
                        </span>
                    </div>
                </div>

                <!-- New Password Field -->
                <div class="form-group" data-animate="input-2">
                    <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                    <div class="input-wrapper">
                        <input asp-for="NewPassword" 
                               type="password" 
                               class="form-control" 
                               placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)"
                               autocomplete="new-password"
                               id="newPasswordInput" />
                        <span class="input-icon input-icon-left">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M18 8H17V6C17 3.24 14.76 1 12 1C9.24 1 7 3.24 7 6V8H6C4.9 8 4 8.9 4 10V20C4 21.1 4.9 22 6 22H18C19.1 22 20 21.1 20 20V10C20 8.9 19.1 8 18 8ZM12 3C13.66 3 15 4.34 15 6V8H9V6C9 4.34 10.34 3 12 3ZM18 20H6V10H18V20ZM12 17C13.1 17 14 16.1 14 15C14 13.9 13.1 13 12 13C10.9 13 10 13.9 10 15C10 16.1 10.9 17 12 17Z" fill="currentColor"/>
                            </svg>
                        </span>
                        <button type="button" class="input-icon password-toggle" id="newPasswordToggle">
                            <svg class="eye-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 4.5C7 4.5 2.73 7.61 1 12C2.73 16.39 7 19.5 12 19.5C17 19.5 21.27 16.39 23 12C21.27 7.61 17 4.5 12 4.5ZM12 17C9.24 17 7 14.76 7 12C7 9.24 9.24 7 12 7C14.76 7 17 9.24 17 12C17 14.76 14.76 17 12 17ZM12 9C10.34 9 9 10.34 9 12C9 13.66 10.34 15 12 15C13.66 15 15 13.66 15 12C15 10.34 13.66 9 12 9Z" fill="currentColor"/>
                            </svg>
                            <svg class="eye-off-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                <path d="M12 7C14.76 7 17 9.24 17 12C17 12.65 16.87 13.26 16.64 13.82L19.56 16.74C21.07 15.49 22.26 13.86 23 12C21.27 7.61 17 4.5 12 4.5C10.6 4.5 9.26 4.75 8.09 5.2L10.17 7.28C10.74 7.1 11.35 7 12 7ZM2 4.27L4.28 6.55L4.73 7L7.53 9.8C7.19 10.5 7 11.22 7 12C7 14.76 9.24 17 12 17C12.78 17 13.5 16.81 14.2 16.47L16.74 19.01C15.49 20.52 13.86 21.71 12 22.5C7 22.5 2.73 19.39 1 15C1.94 13.06 3.24 11.4 4.78 10.11L2 7.33V4.27ZM12 9C11.22 9 10.5 9.19 9.8 9.53L14.47 14.2C14.81 13.5 15 12.78 15 12C15 9.24 12.76 7 10 7H12V9ZM3.27 2L5 3.73L20.27 19L18.54 20.73L12.81 15H12C9.24 15 7 12.76 7 10C7 9.27 7.19 8.55 7.53 7.85L3.27 2Z" fill="currentColor"/>
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="form-group" data-animate="input-3">
                    <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <div class="input-wrapper">
                        <input asp-for="ConfirmPassword" 
                               type="password" 
                               class="form-control" 
                               placeholder="Nhập lại mật khẩu mới"
                               autocomplete="new-password"
                               id="confirmPasswordInput" />
                        <span class="input-icon input-icon-left">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M18 8H17V6C17 3.24 14.76 1 12 1C9.24 1 7 3.24 7 6V8H6C4.9 8 4 8.9 4 10V20C4 21.1 4.9 22 6 22H18C19.1 22 20 21.1 20 20V10C20 8.9 19.1 8 18 8ZM12 3C13.66 3 15 4.34 15 6V8H9V6C9 4.34 10.34 3 12 3ZM18 20H6V10H18V20ZM12 17C13.1 17 14 16.1 14 15C14 13.9 13.1 13 12 13C10.9 13 10 13.9 10 15C10 16.1 10.9 17 12 17Z" fill="currentColor"/>
                            </svg>
                        </span>
                        <button type="button" class="input-icon password-toggle" id="confirmPasswordToggle">
                            <svg class="eye-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 4.5C7 4.5 2.73 7.61 1 12C2.73 16.39 7 19.5 12 19.5C17 19.5 21.27 16.39 23 12C21.27 7.61 17 4.5 12 4.5ZM12 17C9.24 17 7 14.76 7 12C7 9.24 9.24 7 12 7C14.76 7 17 9.24 17 12C17 14.76 14.76 17 12 17ZM12 9C10.34 9 9 10.34 9 12C9 13.66 10.34 15 12 15C13.66 15 15 13.66 15 12C15 10.34 13.66 9 12 9Z" fill="currentColor"/>
                            </svg>
                            <svg class="eye-off-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                <path d="M12 7C14.76 7 17 9.24 17 12C17 12.65 16.87 13.26 16.64 13.82L19.56 16.74C21.07 15.49 22.26 13.86 23 12C21.27 7.61 17 4.5 12 4.5C10.6 4.5 9.26 4.75 8.09 5.2L10.17 7.28C10.74 7.1 11.35 7 12 7ZM2 4.27L4.28 6.55L4.73 7L7.53 9.8C7.19 10.5 7 11.22 7 12C7 14.76 9.24 17 12 17C12.78 17 13.5 16.81 14.2 16.47L16.74 19.01C15.49 20.52 13.86 21.71 12 22.5C7 22.5 2.73 19.39 1 15C1.94 13.06 3.24 11.4 4.78 10.11L2 7.33V4.27ZM12 9C11.22 9 10.5 9.19 9.8 9.53L14.47 14.2C14.81 13.5 15 12.78 15 12C15 9.24 12.76 7 10 7H12V9ZM3.27 2L5 3.73L20.27 19L18.54 20.73L12.81 15H12C9.24 15 7 12.76 7 10C7 9.27 7.19 8.55 7.53 7.85L3.27 2Z" fill="currentColor"/>
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Error Messages -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <!-- Submit Button -->
                <button type="submit" class="btn-login" data-animate="button">
                    <span class="btn-text">Đổi mật khẩu</span>
                    <span class="btn-loader" style="display: none;">
                        <svg class="spinner" viewBox="0 0 24 24" fill="none">
                            <circle class="spinner-circle" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-dasharray="31.416" stroke-dashoffset="31.416">
                                <animate attributeName="stroke-dasharray" dur="2s" values="0 31.416;15.708 15.708;0 31.416;0 31.416" repeatCount="indefinite"/>
                                <animate attributeName="stroke-dashoffset" dur="2s" values="0;-15.708;-31.416;-31.416" repeatCount="indefinite"/>
                            </circle>
                        </svg>
                    </span>
                </button>

                <!-- Back to Login -->
                <div class="text-center mt-3">
                    <a asp-action="Login" asp-controller="Account" class="forgot-password-link">
                        ← Quay lại đăng nhập
                    </a>
                </div>
            </form>

            <!-- Support & Version Info -->
            <div class="form-footer" data-animate="form-footer">
                <div class="support-info">
                    <svg class="support-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM13 19H11V17H13V19ZM15.07 11.25L14.17 12.17C13.45 12.89 13 13.5 13 15H11V14.5C11 13.39 11.45 12.39 12.17 11.67L13.41 10.41C13.78 10.05 14 9.55 14 9C14 7.89 13.1 7 12 7C10.9 7 10 7.9 10 9H8C8 6.79 9.79 5 12 5C14.21 5 16 6.79 16 9C16 10.11 15.28 11.07 14.28 11.5L15.07 11.25Z" fill="currentColor"/>
                    </svg>
                    <span>Hỗ trợ kỹ thuật</span>
                </div>
                <div class="version-info">
                    Phiên bản hệ thống v2.0.1 • Bảo mật theo tiêu chuẩn ISO 27001
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/animejs@3.2.1/lib/anime.min.js"></script>
    <script>
        // Password toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const newPasswordToggle = document.getElementById('newPasswordToggle');
            const confirmPasswordToggle = document.getElementById('confirmPasswordToggle');
            const newPasswordInput = document.getElementById('newPasswordInput');
            const confirmPasswordInput = document.getElementById('confirmPasswordInput');

            if (newPasswordToggle && newPasswordInput) {
                newPasswordToggle.addEventListener('click', function() {
                    const type = newPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    newPasswordInput.setAttribute('type', type);
                    
                    const eyeIcon = newPasswordToggle.querySelector('.eye-icon');
                    const eyeOffIcon = newPasswordToggle.querySelector('.eye-off-icon');
                    if (type === 'password') {
                        eyeIcon.style.display = 'block';
                        eyeOffIcon.style.display = 'none';
                    } else {
                        eyeIcon.style.display = 'none';
                        eyeOffIcon.style.display = 'block';
                    }
                });
            }

            if (confirmPasswordToggle && confirmPasswordInput) {
                confirmPasswordToggle.addEventListener('click', function() {
                    const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    confirmPasswordInput.setAttribute('type', type);
                    
                    const eyeIcon = confirmPasswordToggle.querySelector('.eye-icon');
                    const eyeOffIcon = confirmPasswordToggle.querySelector('.eye-off-icon');
                    if (type === 'password') {
                        eyeIcon.style.display = 'block';
                        eyeOffIcon.style.display = 'none';
                    } else {
                        eyeIcon.style.display = 'none';
                        eyeOffIcon.style.display = 'block';
                    }
                });
            }
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
