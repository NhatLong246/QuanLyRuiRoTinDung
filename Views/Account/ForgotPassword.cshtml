@model QuanLyRuiRoTinDung.Models.ForgotPasswordViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="login-container">
    <!-- Left Panel: Branding & Image -->
    <div class="login-left-panel">
        <div class="login-overlay"></div>
        <div class="login-content-wrapper">
            <!-- Logo -->
            <div class="login-logo" data-animate="logo">
                <img src="~/asset/image/icons8-bank-100.png" alt="Bank Logo" class="logo-icon" />
                <span class="logo-text">Ngân hàng TMCP</span>
            </div>

            <!-- Main Title -->
            <h1 class="login-main-title" data-animate="title">
                Hệ thống Quản lý Rủi ro Tín dụng
            </h1>

            <!-- Footer -->
            <div class="login-footer-wrapper" data-animate="footer">
                <!-- Description -->
                <p class="login-description" data-animate="description">
                    Nền tảng bảo mật cấp doanh nghiệp dành cho chuyên viên tín dụng. 
                    Truy cập dữ liệu thời gian thực và công cụ phân tích rủi ro.
                </p>
                
                <div class="login-footer">
                    <span class="copyright">© 2024 SmartBanking Corp</span>
                    <span class="separator">•</span>
                    <a href="#" class="footer-link">Privacy Policy</a>
                    <span class="separator">•</span>
                    <a href="#" class="footer-link">Terms of Service</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Panel: Forgot Password Form -->
    <div class="login-right-panel">
        <div class="login-form-wrapper">
            <!-- Form Title -->
            <div class="form-header" data-animate="form-header">
                <h2 class="form-title">Quên mật khẩu</h2>
                <p class="form-subtitle">Nhập email để nhận mã xác nhận</p>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            <!-- Forgot Password Form -->
            <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="login-form" id="forgotPasswordForm">
                @Html.AntiForgeryToken()

                <!-- Email Field -->
                <div class="form-group" data-animate="input-1">
                    <label asp-for="Email" class="form-label">
                        Email đăng ký
                    </label>
                    <small class="form-text text-muted d-block mb-2">Mã xác nhận sẽ được gửi đến email này</small>
                    <div class="input-wrapper">
                        <input asp-for="Email" 
                               type="email"
                               class="form-control" 
                               placeholder="Nhập email đăng ký của bạn"
                               autocomplete="email" />
                        <span class="input-icon input-icon-left">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z" fill="currentColor"/>
                            </svg>
                        </span>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Error Messages -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <!-- Submit Button -->
                <button type="submit" class="btn-login" data-animate="button">
                    <span class="btn-text">Gửi yêu cầu</span>
                    <span class="btn-loader" style="display: none;">
                        <svg class="spinner" viewBox="0 0 24 24" fill="none">
                            <circle class="spinner-circle" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-dasharray="31.416" stroke-dashoffset="31.416">
                                <animate attributeName="stroke-dasharray" dur="2s" values="0 31.416;15.708 15.708;0 31.416;0 31.416" repeatCount="indefinite"/>
                                <animate attributeName="stroke-dashoffset" dur="2s" values="0;-15.708;-31.416;-31.416" repeatCount="indefinite"/>
                            </circle>
                        </svg>
                    </span>
                </button>

                <!-- Back to Login -->
                <div class="text-center mt-3">
                    <a asp-action="Login" asp-controller="Account" class="forgot-password-link">
                        ← Quay lại đăng nhập
                    </a>
                </div>
            </form>

            <!-- Support & Version Info -->
            <div class="form-footer" data-animate="form-footer">
                <div class="support-info">
                    <svg class="support-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM13 19H11V17H13V19ZM15.07 11.25L14.17 12.17C13.45 12.89 13 13.5 13 15H11V14.5C11 13.39 11.45 12.39 12.17 11.67L13.41 10.41C13.78 10.05 14 9.55 14 9C14 7.89 13.1 7 12 7C10.9 7 10 7.9 10 9H8C8 6.79 9.79 5 12 5C14.21 5 16 6.79 16 9C16 10.11 15.28 11.07 14.28 11.5L15.07 11.25Z" fill="currentColor"/>
                    </svg>
                    <span>Hỗ trợ kỹ thuật</span>
                </div>
                <div class="version-info">
                    Phiên bản hệ thống v2.0.1 • Bảo mật theo tiêu chuẩn ISO 27001
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/animejs@3.2.1/lib/anime.min.js"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
