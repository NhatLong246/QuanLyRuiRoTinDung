<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyRuiRoTinDung</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/lanhdao-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyRuiRoTinDung.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-gradient-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shield-alt me-2"></i>Quản Lý Rủi Ro Tín Dụng
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LanhDao" asp-action="Index">
                                <i class="fas fa-chart-pie me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LanhDao" asp-action="PheDuyetKhoanVay">
                                <i class="fas fa-check-circle me-1"></i>Phê duyệt Khoản vay
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LanhDao" asp-action="BaoCaoRuiRo">
                                <i class="fas fa-file-alt me-1"></i>Báo cáo Rủi ro
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LanhDao" asp-action="TheoDoiNoXau">
                                <i class="fas fa-list me-1"></i>Thống kê Nợ xấu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LanhDao" asp-action="ThongKeHieuQua">
                                <i class="fas fa-chart-bar me-1"></i>Thống kê Hiệu quả
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @{
                            var maNguoiDung = Context.Session.GetString("MaNguoiDung");
                            var hoTen = Context.Session.GetString("HoTen") ?? "Người dùng";
                            var tenVaiTro = Context.Session.GetString("TenVaiTro") ?? "";
                        }
                        @if (!string.IsNullOrEmpty(maNguoiDung))
                        {
                            <!-- User Profile Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user-profile-link" href="#" id="userProfileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar-circle me-2">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="user-info-text">
                                            <div class="user-name">@hoTen</div>
                                            <div class="user-role">@tenVaiTro</div>
                                        </div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end user-dropdown-menu" aria-labelledby="userProfileDropdown">
                                    <li>
                                        <div class="dropdown-item-text">
                                            <div class="fw-bold">@hoTen</div>
                                            <small class="text-muted">@tenVaiTro</small>
                                        </div>
                                    </li>
                                    @if (tenVaiTro != null && tenVaiTro.Equals("Admin", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("TaoTaiKhoanNhanVien", "Account")">
                                                <i class="fas fa-user-plus me-2"></i>Tạo tài khoản nhân viên
                                            </a>
                                        </li>
                                    }
                                    @if (tenVaiTro != null && tenVaiTro.Equals("LanhDao", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("QuanLyNhanVien", "LanhDao")">
                                                <i class="fas fa-users me-2"></i>Quản lý nhân viên
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item logout-btn">
                                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-4 flex-grow-1">
        <main role="main" class="pb-3 fade-in">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container-fluid px-4 py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    &copy; 2026 - Quản Lý Rủi Ro Tín Dụng
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
