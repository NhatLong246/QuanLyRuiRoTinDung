                        </svg>
                        <span>Đăng xuất</span>
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="dashboard-main">
            <!-- Header -->
            <header class="dashboard-header">
                @{
                    var currentControllerHeader = ViewContext.RouteData.Values["controller"]?.ToString();
                    var headerTitle = currentControllerHeader == "Admin" ? "Dashboard Admin" : "Dashboard";
                    var headerAction = currentControllerHeader == "Admin" ? "Index" : "Index";
                    var headerController = currentControllerHeader == "Admin" ? "Admin" : "Dashboard";
                }
                <a href="@Url.Action(headerAction, headerController)" style="text-decoration: none; color: inherit;">
                    <h1 class="header-title">@headerTitle</h1>
                </a>
                <div class="header-search">
                    <form action="@Url.Action("Search", "Dashboard")" method="get" id="globalSearchForm">
                        <svg class="search-icon" viewBox="0 0 24 24" fill="none">
                            <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2"/>
                            <path d="M21 21L16.65 16.65" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        <input type="text" name="keyword" placeholder="Tìm kiếm hồ sơ, khách hàng..." class="search-input" id="globalSearchInput" />
                    </form>
                    <div id="searchResults" class="search-results-dropdown" style="display: none;"></div>
                </div>
                <div class="header-actions">
                    <div class="notification-wrapper">
                        <button class="header-icon-btn" id="notificationBtn" type="button">
                            <svg viewBox="0 0 24 24" fill="none">
                                <path d="M18 8C18 6.4087 17.3679 4.88258 16.2426 3.75736C15.1174 2.63214 13.5913 2 12 2C10.4087 2 8.88258 2.63214 7.75736 3.75736C6.63214 4.88258 6 6.4087 6 8C6 15 3 17 3 17H21C21 17 18 15 18 8Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
