    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Inline styles for sidebar active state - ensures it works */
        .sidebar-nav .nav-item.active {
            background: linear-gradient(90deg, rgba(59, 130, 246, 0.18) 0%, rgba(139, 92, 246, 0.10) 50%, transparent 100%) !important;
            color: #2563eb !important;
            font-weight: 700 !important;
            padding-left: 28px !important;
            position: relative;
        }
        .sidebar-nav .nav-item.active::before {
            content: '' !important;
            position: absolute !important;
            left: 0 !important;
            top: 0 !important;
            bottom: 0 !important;
            width: 5px !important;
            background: linear-gradient(180deg, #3b82f6 0%, #8b5cf6 100%) !important;
            border-radius: 0 4px 4px 0 !important;
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.6) !important;
        }
        .sidebar-nav .nav-item.active::after {
            content: '' !important;
            position: absolute !important;
            right: 16px !important;
            top: 50% !important;
            transform: translateY(-50%) !important;
            width: 8px !important;
            height: 8px !important;
            background: #3b82f6 !important;
            border-radius: 50% !important;
            box-shadow: 0 0 8px rgba(59, 130, 246, 0.8) !important;
            animation: pulse-active 2s ease-in-out infinite !important;
        }
        .sidebar-nav .nav-item.active .nav-icon {
            color: #2563eb !important;
            filter: drop-shadow(0 0 4px rgba(59, 130, 246, 0.5)) !important;
        }
        @@keyframes pulse-active {
            0%, 100% { transform: translateY(-50%) scale(1); opacity: 1; }
            50% { transform: translateY(-50%) scale(1.3); opacity: 0.7; }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
