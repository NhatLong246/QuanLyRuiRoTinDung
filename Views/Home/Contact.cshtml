@{
    ViewData["Title"] = "Liên hệ";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ngân hàng TMCP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        .page-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .page-content {
            flex: 1;
            padding: 80px 0;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }
        
        .page-header {
            text-align: center;
            margin-bottom: 60px;
        }
        
        .page-title {
            font-size: 42px;
            font-weight: 800;
            color: #0f172a;
            margin-bottom: 16px;
        }
        
        .page-subtitle {
            font-size: 18px;
            color: #64748b;
            max-width: 600px;
            margin: 0 auto;
        }
        
        /* Contact Grid */
        .contact-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 32px;
            margin-bottom: 48px;
        }
        
        /* Contact Info Card */
        .contact-info-card {
            background: white;
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }
        
        .contact-info-title {
            font-size: 24px;
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 32px;
        }
        
        .contact-item {
            display: flex;
            gap: 16px;
            margin-bottom: 28px;
        }
        
        .contact-item:last-child {
            margin-bottom: 0;
        }
        
        .contact-icon {
            width: 52px;
            height: 52px;
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }
        
        .contact-icon svg {
            width: 24px;
            height: 24px;
            color: white;
        }
        
        .contact-details h4 {
            font-size: 16px;
            font-weight: 600;
            color: #0f172a;
            margin-bottom: 6px;
        }
        
        .contact-details p {
            font-size: 14px;
            color: #64748b;
            line-height: 1.5;
            margin: 0;
        }
        
        .contact-details a {
            color: #3b82f6;
            text-decoration: none;
            font-weight: 500;
        }
        
        .contact-details a:hover {
            text-decoration: underline;
        }
        
        /* Map Card */
        .map-card {
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }
        
        .map-embed {
            height: 280px;
            overflow: hidden;
            border-radius: 24px 24px 0 0;
        }
        
        .map-embed iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
        
        .map-info {
            padding: 24px;
        }
        
        .map-info h4 {
            font-size: 18px;
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 8px;
        }
        
        .map-info p {
            font-size: 14px;
            color: #64748b;
            margin: 0;
        }
        
        /* Departments Section */
        .departments-section {
            background: white;
            border-radius: 24px;
            padding: 40px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }
        
        .departments-title {
            font-size: 24px;
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 32px;
            text-align: center;
        }
        
        .departments-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 24px;
        }
        
        .department-card {
            background: #f8fafc;
            border-radius: 16px;
            padding: 24px;
            text-align: center;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }
        
        .department-card:hover {
            border-color: #3b82f6;
            background: #eff6ff;
        }
        
        .department-icon {
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 16px;
        }
        
        .department-icon svg {
            width: 28px;
            height: 28px;
            color: white;
        }
        
        .department-card h4 {
            font-size: 16px;
            font-weight: 600;
            color: #0f172a;
            margin-bottom: 8px;
        }
        
        .department-card p {
            font-size: 13px;
            color: #64748b;
            margin-bottom: 12px;
        }
        
        .department-contact {
            font-size: 14px;
            color: #3b82f6;
            font-weight: 500;
        }
        
        /* Working Hours */
        .working-hours {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            border-radius: 16px;
            padding: 24px 32px;
            margin-top: 32px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .working-hours-info h4 {
            font-size: 18px;
            font-weight: 700;
            color: white;
            margin-bottom: 4px;
        }
        
        .working-hours-info p {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.85);
            margin: 0;
        }
        
        .working-hours-badge {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 12px 20px;
        }
        
        .working-hours-badge span {
            color: white;
            font-size: 14px;
            font-weight: 600;
        }
        
        /* Quick Actions */
        .quick-actions {
            display: flex;
            justify-content: center;
            gap: 16px;
            margin-top: 48px;
        }
        
        .quick-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 14px 28px;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .quick-btn.primary {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
        }
        
        .quick-btn.primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px -10px rgba(37, 99, 235, 0.5);
        }
        
        .quick-btn.secondary {
            background: #f1f5f9;
            color: #0f172a;
        }
        
        .quick-btn.secondary:hover {
            background: #e2e8f0;
        }
        
        .quick-btn svg {
            width: 18px;
            height: 18px;
        }
        
        @@media (max-width: 992px) {
            .contact-grid {
                grid-template-columns: 1fr;
            }
            
            .departments-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .working-hours {
                flex-direction: column;
                gap: 16px;
                text-align: center;
            }
        }
        
        @@media (max-width: 768px) {
            .departments-grid {
                grid-template-columns: 1fr;
            }
            
            .departments-section {
                padding: 32px 24px;
            }
            
            .quick-actions {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- Header -->
        <header class="landing-header">
            <div class="container">
                <nav class="navbar">
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                        <img src="~/asset/image/icons8-bank-100.png" alt="Bank Logo" class="header-logo" />
                        <div class="brand-text">
                            <div class="brand-name">Ngân hàng TMCP</div>
                            <div class="brand-subtitle">Hệ thống Quản lý Rủi ro Tín dụng</div>
                        </div>
                    </a>
                    <div class="navbar-menu">
                        <a asp-controller="Home" asp-action="Support" class="nav-link">Hỗ trợ</a>
                        <a asp-controller="Home" asp-action="Contact" class="nav-link active">Liên hệ</a>
                        <a asp-controller="Account" asp-action="Login" class="btn-login-nav">
                            <span>Đăng nhập</span>
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                            </svg>
                        </a>
                    </div>
                </nav>
            </div>
        </header>

        <!-- Page Content -->
        <div class="page-content">
            <div class="container">
